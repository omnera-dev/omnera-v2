{
  "name": "omnera",
  "version": "0.0.1",
  "description": "Configuration-driven web application platform built with Bun, Effect, React, and Tailwind CSS",
  "module": "src/index.ts",
  "bin": {
    "omnera": "./src/cli.ts"
  },
  "author": {
    "name": "Thomas JEANNEAU",
    "company": "ESSENTIAL SERVICES",
    "email": "support@omnera.dev"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/omnera-dev/omnera-v2.git"
  },
  "bugs": {
    "url": "https://github.com/omnera-dev/omnera-v2/issues"
  },
  "homepage": "https://github.com/omnera-dev/omnera-v2#readme",
  "keywords": [
    "omnera",
    "bun",
    "typescript",
    "framework",
    "schema",
    "effect",
    "hono",
    "better-auth",
    "configuration"
  ],
  "files": [
    "drizzle/*",
    "drizzle/**/*",
    "schemas/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "LICENSE.md",
    "LICENSE_EE.md",
    "README.md",
    "CHANGELOG.md",
    "tsconfig.json"
  ],
  "scripts": {
    "start": "bun run src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "knip",
    "clean:fix": "knip --fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "quality": "bun run scripts/check-quality.ts",
    "test:unit": "bun test --concurrent src/ scripts/",
    "test:unit:watch": "bun test --concurrent --watch src/ scripts/",
    "test:e2e": "playwright test",
    "test:e2e:spec": "playwright test --grep='@spec'",
    "test:e2e:regression": "playwright test --grep='@regression'",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "bun test:unit && bun test:e2e:regression",
    "license": "bun run scripts/add-license-headers.ts",
    "generate:roadmap": "bun run scripts/generate-roadmap.ts",
    "export:schema": "bun run scripts/export-schema.ts",
    "export:openapi": "bun run scripts/export-openapi.ts",
    "validate:admin-specs": "bun run scripts/validate-admin-specs.ts",
    "validate:api-specs": "bun run scripts/validate-api-specs.ts",
    "validate:app-specs": "bun run scripts/validate-app-specs.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^14.2.1",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@testcontainers/postgresql": "^11.7.2",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.6",
    "@types/react-dom": "^19.2.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-check-file": "^3.3.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "knip": "^5.66.4",
    "pg": "^8.16.3",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.4",
    "@hono/zod-validator": "^0.7.4",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
