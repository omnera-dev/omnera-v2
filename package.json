{
  "name": "omnera",
  "version": "0.0.1",
  "description": "Omnera - Modern TypeScript framework built with Bun",
  "module": "src/index.ts",
  "bin": {
    "omnera": "./src/cli.ts"
  },
  "author": "Thomas JEANNEAU",
  "license": "BSL-1.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/omnera-dev/omnera-v2.git"
  },
  "bugs": {
    "url": "https://github.com/omnera-dev/omnera-v2/issues"
  },
  "homepage": "https://github.com/omnera-dev/omnera-v2#readme",
  "keywords": [
    "omnera",
    "bun",
    "typescript",
    "framework"
  ],
  "files": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "LICENSE.md",
    "README.md",
    "CHANGELOG.md",
    "tsconfig.json"
  ],
  "scripts": {
    "start": "bun run src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "knip",
    "lint": "eslint .",
    "test:unit": "bun test --concurrent src scripts",
    "test:unit:watch": "bun test --concurrent --watch src scripts",
    "test:e2e": "playwright test",
    "test:e2e:spec": "playwright test --grep='@spec'",
    "test:e2e:critical": "playwright test --grep='@critical'",
    "test:e2e:regression": "playwright test --grep='@regression'",
    "test:e2e:dev": "playwright test --grep='@spec|@critical'",
    "test:e2e:ci": "playwright test --grep='@regression|@critical'",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "bun test:unit && bun test:e2e:ci",
    "export:schema": "bun run scripts/export-schema.ts",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.8.1",
    "@types/react-dom": "^19.2.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "knip": "^5.66.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.14",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.3.27",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.6",
    "effect": "^3.18.4",
    "embla-carousel-react": "^8.6.0",
    "hono": "^4.10.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.545.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  }
}
