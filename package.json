{
  "name": "omnera",
  "version": "0.0.1",
  "description": "Omnera - Modern TypeScript framework built with Bun",
  "module": "src/index.ts",
  "bin": {
    "omnera": "./src/cli.ts"
  },
  "license": "BSL-1.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/omnera-dev/omnera-v2.git"
  },
  "bugs": {
    "url": "https://github.com/omnera-dev/omnera-v2/issues"
  },
  "homepage": "https://github.com/omnera-dev/omnera-v2#readme",
  "keywords": [
    "omnera",
    "bun",
    "typescript",
    "framework"
  ],
  "scripts": {
    "start": "bun run src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "knip --fix",
    "lint": "eslint .",
    "test:all": "bun test && bun test:e2e",
    "test:e2e": "playwright test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "latest",
    "@types/node": "^24.7.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "knip": "^5.65.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "effect": "^3.18.4",
    "hono": "^4.9.12",
    "lucide-react": "^0.545.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0"
  }
}
