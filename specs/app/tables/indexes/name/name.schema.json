{
  "$id": "name.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Index Name",
  "description": "Name of the index. Use descriptive names like 'idx_tablename_fieldname'",
  "type": "string",
  "minLength": 1,
  "pattern": "^[a-z][a-z0-9_]*$",
  "examples": ["idx_users_email", "idx_products_sku", "idx_orders_status"],
  "x-specs": []
}
