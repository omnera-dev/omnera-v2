{
  "$id": "resultType.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Expected data type of the formula result",
  "description": "Expected data type of the formula result",
  "type": "string",
  "default": "text",
  "enum": ["text", "number", "boolean", "date"],
  "specs": [
    {
      "id": "FIELD-FORMULA-FIELD-RESULTTYPE-001",
      "given": "user selects resultType from valid options",
      "when": "validating input",
      "then": "selection should be accepted"
    },
    {
      "id": "FIELD-FORMULA-FIELD-RESULTTYPE-002",
      "given": "user provides invalid resultType value",
      "when": "validating input",
      "then": "error should list valid options: text, number, boolean"
    },
    {
      "id": "FIELD-FORMULA-FIELD-RESULTTYPE-003",
      "given": "resultType is set to any valid enum value",
      "when": "processing entity",
      "then": "appropriate behavior should execute"
    }
  ]
}
