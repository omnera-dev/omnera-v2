{
  "$id": "indexed.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Indexed Field Property",
  "description": "Whether to create a database index on this field for faster queries",
  "type": "boolean",
  "default": false,
  "specs": [
    {
      "id": "FIELD-INDEXED-001",
      "given": "indexed is true",
      "when": "processing entity",
      "then": "corresponding behavior should be enforced"
    },
    {
      "id": "FIELD-INDEXED-002",
      "given": "indexed is false (default: false)",
      "when": "processing entity",
      "then": "corresponding behavior should not be enforced"
    },
    {
      "id": "FIELD-INDEXED-003",
      "given": "configuration with indexed",
      "when": "validating settings",
      "then": "boolean value should be accepted"
    }
  ]
}
