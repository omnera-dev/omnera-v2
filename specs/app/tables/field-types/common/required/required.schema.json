{
  "$id": "required.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Required Field Property",
  "description": "Whether this field must have a value (cannot be null or undefined)",
  "type": "boolean",
  "default": false,
  "specs": [
    {
      "id": "FIELD-REQUIRED-001",
      "given": "required is true",
      "when": "processing entity",
      "then": "corresponding behavior should be enforced"
    },
    {
      "id": "FIELD-REQUIRED-002",
      "given": "required is false (default: false)",
      "when": "processing entity",
      "then": "corresponding behavior should not be enforced"
    },
    {
      "id": "FIELD-REQUIRED-003",
      "given": "configuration with required",
      "when": "validating settings",
      "then": "boolean value should be accepted"
    }
  ]
}
