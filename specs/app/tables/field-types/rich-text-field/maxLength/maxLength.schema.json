{
  "$id": "maxLength.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Maximum length in characters",
  "description": "Maximum length in characters",
  "type": "integer",
  "minimum": 1,
  "specs": [
    {
      "id": "APP-FIELD-RICH-TEXT-FIELD-MAXLENGTH-001",
      "given": "user provides maxLength >= 1",
      "when": "validating input",
      "then": "value should be accepted"
    },
    {
      "id": "APP-FIELD-RICH-TEXT-FIELD-MAXLENGTH-002",
      "given": "user provides maxLength < 1",
      "when": "validating input",
      "then": "error should enforce minimum value"
    }
  ]
}
