{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "breakpoints.schema.json",
  "title": "Breakpoints",
  "description": "Responsive design breakpoints",
  "type": "object",
  "patternProperties": {
    "^[a-z]+$": {
      "type": "string",
      "pattern": "^[0-9]+px$",
      "description": "Breakpoint value in pixels"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  ],
  "x-specs": [
    {
      "id": "APP-THEME-BREAKPOINTS-001",
      "given": "standard Tailwind breakpoints (sm, md, lg, xl, 2xl)",
      "when": "responsive system uses common breakpoints",
      "then": "it should validate Tailwind breakpoint values",
      "validation": {
        "setup": {
          "breakpoints": {
            "sm": "640px",
            "md": "768px",
            "lg": "1024px",
            "xl": "1280px",
            "2xl": "1536px"
          }
        },
        "assertions": [
          "sm: 640px (mobile)",
          "md: 768px (tablet)",
          "lg: 1024px (laptop)",
          "xl: 1280px (desktop)",
          "2xl: 1536px (large)"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-002",
      "given": "breakpoint values in pixels",
      "when": "breakpoints use px units",
      "then": "it should validate pixel-based breakpoints",
      "validation": {
        "setup": {
          "breakpoints": {
            "mobile": "480px",
            "tablet": "768px"
          }
        },
        "assertions": [
          "Pattern: ^[0-9]+px$",
          "Pixels required (not rem or em)",
          "Consistent with media queries"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-003",
      "given": "mobile-first breakpoint progression",
      "when": "breakpoints increase from small to large",
      "then": "it should validate progressive enhancement strategy",
      "validation": {
        "setup": {
          "breakpoints": {
            "sm": "640px",
            "md": "768px",
            "lg": "1024px"
          }
        },
        "assertions": [
          "Mobile-first: 640 < 768 < 1024",
          "Progressive enhancement",
          "Ascending values"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-004",
      "given": "breakpoint with lowercase naming",
      "when": "breakpoint uses simple names",
      "then": "it should validate lowercase naming convention",
      "validation": {
        "setup": {
          "breakpoints": {
            "sm": "640px",
            "md": "768px"
          }
        },
        "assertions": ["Pattern: ^[a-z]+$", "Lowercase only", "No hyphens, numbers, or uppercase"]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-005",
      "given": "custom breakpoints (tablet, desktop, wide)",
      "when": "project uses semantic breakpoint names",
      "then": "it should validate custom breakpoint naming",
      "validation": {
        "setup": {
          "breakpoints": {
            "tablet": "768px",
            "desktop": "1280px",
            "wide": "1920px"
          }
        },
        "assertions": [
          "Semantic names accepted",
          "tablet, desktop, wide (custom)",
          "Alternative to sm/md/lg naming"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-006",
      "given": "breakpoints matching responsive.schema.json",
      "when": "theme breakpoints align with responsive variants",
      "then": "it should validate consistency across responsive system",
      "validation": {
        "setup": {
          "breakpoints": {
            "sm": "640px",
            "md": "768px",
            "lg": "1024px"
          }
        },
        "assertions": [
          "Breakpoint names must match responsive variants",
          "Ensures sm: prefix works in components",
          "Cross-schema consistency"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-APPLICATION-001",
      "given": "md breakpoint applied to responsive grid",
      "when": "grid uses theme.breakpoints.md for tablet layout",
      "then": "it should render grid with media query at 768px",
      "application": {
        "theme": {
          "breakpoints": {
            "md": "768px"
          }
        },
        "component": "grid",
        "expectedCSS": "@media (min-width: 768px) { grid-template-columns: repeat(2, 1fr); }",
        "expectedDOM": "<div data-testid=\"responsive-grid\" class=\"grid md:grid-cols-2\">...</div>",
        "assertions": [
          "Breakpoint token: theme.breakpoints.md = '768px'",
          "Applied as: @media (min-width: 768px)",
          "Visual result: 1 column on mobile, 2 columns on tablet+",
          "Mobile-first responsive design"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-APPLICATION-002",
      "given": "lg breakpoint applied to navigation menu",
      "when": "navigation switches from mobile to desktop at theme.breakpoints.lg",
      "then": "it should render hamburger menu below 1024px and full menu above",
      "application": {
        "theme": {
          "breakpoints": {
            "lg": "1024px"
          }
        },
        "component": "navigation",
        "expectedCSS": "@media (min-width: 1024px) { display: flex; } @media (max-width: 1023px) { display: none; }",
        "expectedDOM": "<nav data-testid=\"main-nav\" class=\"hidden lg:flex\">...</nav>",
        "assertions": [
          "Breakpoint token: theme.breakpoints.lg = '1024px'",
          "Applied as: @media (min-width: 1024px)",
          "Visual result: Hamburger menu (<1024px), full menu (â‰¥1024px)",
          "Progressive enhancement: mobile menu first"
        ]
      }
    },
    {
      "id": "APP-THEME-BREAKPOINTS-APPLICATION-003",
      "given": "multiple breakpoints applied to hero section",
      "when": "hero section uses sm, md, lg for responsive padding",
      "then": "it should render with increasing padding at each breakpoint",
      "application": {
        "theme": {
          "breakpoints": {
            "sm": "640px",
            "md": "768px",
            "lg": "1024px"
          }
        },
        "component": "hero",
        "expectedCSS": "padding: 2rem; @media (min-width: 640px) { padding: 3rem; } @media (min-width: 768px) { padding: 4rem; } @media (min-width: 1024px) { padding: 5rem; }",
        "expectedDOM": "<section data-testid=\"hero-section\" class=\"p-8 sm:p-12 md:p-16 lg:p-20\">...</section>",
        "assertions": [
          "Base: 2rem padding (mobile)",
          "sm (640px+): 3rem padding",
          "md (768px+): 4rem padding",
          "lg (1024px+): 5rem padding",
          "Progressive enhancement with multiple breakpoints"
        ]
      }
    }
  ]
}
