{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "border-radius.schema.json",
  "title": "Border Radius",
  "description": "Border radius design tokens",
  "type": "object",
  "patternProperties": {
    "^[a-z]+(-[a-z]+)*$": {
      "type": "string",
      "description": "CSS border-radius value"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "none": "0",
      "sm": "0.125rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    }
  ],
  "x-specs": [
    {
      "id": "APP-THEME-RADIUS-001",
      "given": "border-radius scale from none to 3xl",
      "when": "radius system defines progressive rounding",
      "then": "it should validate radius tokens from 0 to 1.5rem",
      "validation": {
        "setup": {
          "borderRadius": {
            "none": "0",
            "sm": "0.125rem",
            "md": "0.375rem",
            "lg": "0.5rem",
            "xl": "0.75rem",
            "2xl": "1rem",
            "3xl": "1.5rem"
          }
        },
        "assertions": [
          "7 radius levels",
          "none: 0 (sharp)",
          "3xl: 1.5rem (24px, very round)",
          "Progressive rounding"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-002",
      "given": "border-radius 'none' with value '0'",
      "when": "sharp corners are needed",
      "then": "it should validate no rounding",
      "validation": {
        "setup": {
          "borderRadius": {
            "none": "0"
          }
        },
        "assertions": [
          "Value: 0 (no rounding)",
          "Sharp 90-degree corners",
          "Minimal/brutalist design"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-003",
      "given": "border-radius 'full' with value '9999px'",
      "when": "perfect circles or pills are needed",
      "then": "it should validate fully rounded elements",
      "validation": {
        "setup": {
          "borderRadius": {
            "full": "9999px"
          }
        },
        "assertions": [
          "Value: 9999px (maximum rounding)",
          "Creates perfect circles (square elements)",
          "Creates pills (rectangular elements)"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-004",
      "given": "border-radius using rem units",
      "when": "radius scales with font size",
      "then": "it should validate rem-based radius values",
      "validation": {
        "setup": {
          "borderRadius": {
            "sm": "0.125rem",
            "md": "0.375rem",
            "lg": "0.5rem"
          }
        },
        "assertions": [
          "Rem units scale with root font size",
          "sm: 0.125rem (2px @ 16px base)",
          "Responsive rounding"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-005",
      "given": "border-radius with kebab-case naming",
      "when": "radius uses multi-word names",
      "then": "it should validate kebab-case convention",
      "validation": {
        "setup": {
          "borderRadius": {
            "button-radius": "0.5rem",
            "card-radius": "1rem"
          }
        },
        "assertions": [
          "Pattern: ^[a-z]+(-[a-z]+)*$",
          "button-radius, card-radius valid",
          "Semantic naming allowed"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-006",
      "given": "complete radius system (none, sm, md, lg, xl, 2xl, 3xl, full)",
      "when": "all radius tokens are defined",
      "then": "it should validate complete rounding system",
      "validation": {
        "setup": {
          "borderRadius": {
            "none": "0",
            "sm": "0.125rem",
            "md": "0.375rem",
            "lg": "0.5rem",
            "xl": "0.75rem",
            "2xl": "1rem",
            "3xl": "1.5rem",
            "full": "9999px"
          }
        },
        "assertions": ["8 radius tokens", "none to full range", "Complete rounding system"]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-001",
      "given": "md radius applied to button component",
      "when": "button uses theme.borderRadius.md for moderate rounding",
      "then": "it should render button with 0.375rem border-radius creating soft corners",
      "application": {
        "theme": {
          "borderRadius": {
            "md": "0.375rem"
          }
        },
        "component": "button",
        "expectedCSS": "border-radius: 0.375rem;",
        "expectedDOM": "<button data-testid=\"primary-button\" class=\"rounded-md\" style=\"border-radius: 0.375rem;\">Click me</button>",
        "assertions": [
          "Radius token: theme.borderRadius.md = '0.375rem'",
          "Applied as: style=\"border-radius: 0.375rem;\"",
          "Visual result: Button with moderately rounded corners (6px)",
          "Balanced: neither sharp nor pill-shaped"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-002",
      "given": "full radius applied to avatar image",
      "when": "avatar uses theme.borderRadius.full for perfect circle",
      "then": "it should render image as circle with 9999px border-radius",
      "application": {
        "theme": {
          "borderRadius": {
            "full": "9999px"
          }
        },
        "component": "avatar",
        "expectedCSS": "border-radius: 9999px;",
        "expectedDOM": "<img data-testid=\"user-avatar\" class=\"rounded-full\" style=\"border-radius: 9999px;\" src=\"avatar.jpg\" alt=\"User\" />",
        "assertions": [
          "Radius token: theme.borderRadius.full = '9999px'",
          "Applied as: style=\"border-radius: 9999px;\"",
          "Visual result: Square image becomes perfect circle",
          "9999px ensures full rounding regardless of size"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-003",
      "given": "lg radius applied to card component",
      "when": "card uses theme.borderRadius.lg for noticeable rounding",
      "then": "it should render card with 0.5rem border-radius creating soft edges",
      "application": {
        "theme": {
          "borderRadius": {
            "lg": "0.5rem"
          }
        },
        "component": "card",
        "expectedCSS": "border-radius: 0.5rem;",
        "expectedDOM": "<div data-testid=\"content-card\" class=\"rounded-lg\" style=\"border-radius: 0.5rem;\">Card content</div>",
        "assertions": [
          "Radius token: theme.borderRadius.lg = '0.5rem'",
          "Applied as: style=\"border-radius: 0.5rem;\"",
          "Visual result: Card with noticeable rounded corners (8px)",
          "Softer appearance than md, more friendly design"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-004",
      "given": "responsive border-radius varying by breakpoint",
      "when": "mobile uses sm radius and desktop uses lg radius for touch vs visual optimization",
      "then": "it should apply smaller radius on mobile for better touch targets and larger radius on desktop for visual polish",
      "application": {
        "theme": {
          "borderRadius": {
            "sm": "0.125rem",
            "lg": "0.5rem"
          }
        },
        "component": "button",
        "expectedCSS": {
          "mobile": "border-radius: 0.125rem;",
          "desktop": "border-radius: 0.5rem;"
        },
        "expectedDOM": "<button data-testid=\"responsive-button\" class=\"rounded-sm lg:rounded-lg\" style=\"border-radius: 0.125rem;\">Get Started</button>",
        "assertions": [
          "Mobile: sm radius (0.125rem / 2px) for precise touch targets",
          "Desktop: lg radius (0.5rem / 8px) for softer visual appearance",
          "Responsive pattern: smaller radius improves mobile usability",
          "Tailwind classes: rounded-sm lg:rounded-lg"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-005",
      "given": "per-corner border-radius for complex shapes",
      "when": "speech bubble uses different radius per corner for directional indicator",
      "then": "it should render element with custom radius on each corner creating arrow-like shape",
      "application": {
        "theme": {
          "borderRadius": {
            "md": "0.375rem",
            "none": "0"
          }
        },
        "component": "speech-bubble",
        "expectedCSS": "border-radius: 0.375rem 0.375rem 0 0.375rem;",
        "expectedDOM": "<div data-testid=\"message-bubble\" class=\"rounded-md rounded-bl-none\" style=\"border-top-left-radius: 0.375rem; border-top-right-radius: 0.375rem; border-bottom-right-radius: 0.375rem; border-bottom-left-radius: 0;\">Hello!</div>",
        "assertions": [
          "Per-corner control: top-left, top-right, bottom-right rounded; bottom-left sharp",
          "Creates directional indicator (speech bubble pointing left)",
          "Complex shapes: mix rounded and sharp corners",
          "CSS syntax: border-radius: tl tr br bl (clockwise from top-left)"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-006",
      "given": "full radius for badge and pill-shaped components",
      "when": "badge uses theme.borderRadius.full for pill shape",
      "then": "it should render badge as pill with fully rounded left and right edges",
      "application": {
        "theme": {
          "borderRadius": {
            "full": "9999px"
          }
        },
        "component": "badge",
        "expectedCSS": "border-radius: 9999px;",
        "expectedDOM": "<span data-testid=\"status-badge\" class=\"rounded-full\" style=\"border-radius: 9999px; padding: 0.25rem 0.75rem;\">New</span>",
        "assertions": [
          "Radius token: theme.borderRadius.full = '9999px'",
          "Visual result: Pill-shaped badge (fully rounded ends)",
          "Use case: Status badges, tags, chips, notification counts",
          "Works with any width: 9999px adapts to element dimensions"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-007",
      "given": "radius patterns for image components (avatar vs thumbnail vs hero)",
      "when": "different image types require different rounding approaches",
      "then": "it should apply appropriate radius for each image context",
      "application": {
        "theme": {
          "borderRadius": {
            "full": "9999px",
            "md": "0.375rem",
            "lg": "0.5rem",
            "none": "0"
          }
        },
        "components": {
          "avatar": {
            "expectedCSS": "border-radius: 9999px;",
            "expectedDOM": "<img data-testid=\"user-avatar\" class=\"rounded-full\" style=\"border-radius: 9999px; width: 40px; height: 40px;\" src=\"avatar.jpg\" alt=\"User\" />"
          },
          "thumbnail": {
            "expectedCSS": "border-radius: 0.375rem;",
            "expectedDOM": "<img data-testid=\"post-thumbnail\" class=\"rounded-md\" style=\"border-radius: 0.375rem;\" src=\"thumbnail.jpg\" alt=\"Post\" />"
          },
          "hero": {
            "expectedCSS": "border-radius: 0.5rem 0.5rem 0 0;",
            "expectedDOM": "<img data-testid=\"hero-image\" class=\"rounded-t-lg\" style=\"border-top-left-radius: 0.5rem; border-top-right-radius: 0.5rem; border-bottom-left-radius: 0; border-bottom-right-radius: 0;\" src=\"hero.jpg\" alt=\"Hero\" />"
          }
        },
        "assertions": [
          "Avatar: full radius (circle) - square dimensions become perfect circle",
          "Thumbnail: md radius (moderate rounding) - preserves image aspect ratio",
          "Hero: top-lg radius (rounded top only) - integrates with card below",
          "Context-aware: radius choice depends on image purpose and layout"
        ]
      }
    },
    {
      "id": "APP-THEME-RADIUS-APPLICATION-008",
      "given": "card component hierarchy with coordinated border-radius across parent and children",
      "when": "card contains header, body, and footer with nested rounding",
      "then": "it should apply radius to create cohesive nested component design",
      "application": {
        "theme": {
          "borderRadius": {
            "lg": "0.5rem",
            "md": "0.375rem",
            "none": "0"
          }
        },
        "component": "card-with-header",
        "expectedDOM": "<div data-testid=\"product-card\" class=\"rounded-lg\" style=\"border-radius: 0.5rem; overflow: hidden;\">\n  <div data-testid=\"card-header\" class=\"rounded-t-lg\" style=\"border-top-left-radius: 0.5rem; border-top-right-radius: 0.5rem; background: #f3f4f6; padding: 1rem;\">Header</div>\n  <div data-testid=\"card-body\" style=\"padding: 1rem;\">Content</div>\n  <div data-testid=\"card-footer\" class=\"rounded-b-lg\" style=\"border-bottom-left-radius: 0.5rem; border-bottom-right-radius: 0.5rem; background: #f9fafb; padding: 1rem;\">Footer</div>\n</div>",
        "assertions": [
          "Parent card: lg radius (0.5rem) on all corners with overflow: hidden",
          "Header: top-lg radius matches parent's top corners",
          "Body: no radius (internal content)",
          "Footer: bottom-lg radius matches parent's bottom corners",
          "Design system coherence: nested components coordinate radius",
          "Visual hierarchy: outer corners rounded, inner boundaries sharp"
        ]
      }
    },
    {
      "id": "APP-THEME-BORDER-RADIUS-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full border-radius workflow"
    }
  ]
}
