{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "shadows.schema.json",
  "title": "Shadows",
  "description": "Box shadow design tokens",
  "type": "object",
  "patternProperties": {
    "^[a-z]+(-[a-z]+)*$": {
      "type": "string",
      "description": "CSS box-shadow value"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)",
      "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)",
      "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)",
      "none": "0 0 #0000"
    }
  ],
  "specs": [
    {
      "id": "APP-THEME-SHADOWS-001",
      "given": "shadow scale from sm to 2xl",
      "when": "shadows increase in depth and blur",
      "then": "it should provide elevation system from subtle to dramatic"
    },
    {
      "id": "APP-THEME-SHADOWS-002",
      "given": "shadow with rgb color and opacity",
      "when": "shadow uses modern CSS color syntax",
      "then": "it should accept rgb(0 0 0 / 0.1) format"
    },
    {
      "id": "APP-THEME-SHADOWS-003",
      "given": "inner shadow for inset effects",
      "when": "shadow creates depth inside element",
      "then": "it should apply inset box-shadow"
    },
    {
      "id": "APP-THEME-SHADOWS-004",
      "given": "shadow 'none' to remove shadows",
      "when": "flat design with no elevation is needed",
      "then": "it should remove all shadows"
    },
    {
      "id": "APP-THEME-SHADOWS-005",
      "given": "shadows with kebab-case naming",
      "when": "shadow uses multi-word names",
      "then": "it should validate kebab-case convention"
    },
    {
      "id": "APP-THEME-SHADOWS-006",
      "given": "complete shadow system (sm, md, lg, xl, 2xl, inner, none)",
      "when": "all elevation tokens are defined",
      "then": "it should cover all common shadow needs"
    }
  ]
}
