{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "shadows.schema.json",
  "title": "Shadows",
  "description": "Box shadow design tokens",
  "type": "object",
  "patternProperties": {
    "^[a-z]+(-[a-z]+)*$": {
      "type": "string",
      "description": "CSS box-shadow value"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)",
      "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)",
      "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)",
      "none": "0 0 #0000"
    }
  ],
  "x-specs": [
    {
      "id": "APP-THEME-SHADOWS-001",
      "given": "shadow scale from sm to 2xl",
      "when": "shadows increase in depth and blur",
      "then": "it should validate elevation system from subtle to dramatic",
      "validation": {
        "setup": {
          "shadows": {
            "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
            "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
            "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)",
            "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)"
          }
        },
        "assertions": [
          "5 elevation levels",
          "sm: subtle (1px blur)",
          "2xl: dramatic (50px blur)",
          "Progressive depth"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-002",
      "given": "shadow with rgb color and opacity",
      "when": "shadow uses modern CSS color syntax",
      "then": "it should validate rgb(0 0 0 / 0.1) format",
      "validation": {
        "setup": {
          "shadows": {
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)"
          }
        },
        "assertions": [
          "Modern syntax: rgb(0 0 0 / 0.1)",
          "Opacity: 0.1 (10%)",
          "Black shadow with transparency"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-003",
      "given": "inner shadow for inset effects",
      "when": "shadow creates depth inside element",
      "then": "it should validate inset box-shadow",
      "validation": {
        "setup": {
          "shadows": {
            "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)"
          }
        },
        "assertions": [
          "Inset keyword for inner shadow",
          "Creates recessed effect",
          "Opposite of elevation"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-004",
      "given": "shadow 'none' to remove shadows",
      "when": "flat design with no elevation is needed",
      "then": "it should validate shadow removal",
      "validation": {
        "setup": {
          "shadows": {
            "none": "0 0 #0000"
          }
        },
        "assertions": ["Value: 0 0 #0000 (no shadow)", "Removes all shadows", "Flat design"]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-005",
      "given": "shadows with kebab-case naming",
      "when": "shadow uses multi-word names",
      "then": "it should validate kebab-case convention",
      "validation": {
        "setup": {
          "shadows": {
            "drop-shadow": "0 4px 6px rgb(0 0 0 / 0.1)",
            "card-shadow": "0 2px 4px rgb(0 0 0 / 0.05)"
          }
        },
        "assertions": [
          "Pattern: ^[a-z]+(-[a-z]+)*$",
          "drop-shadow, card-shadow valid",
          "Kebab-case enforced"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-006",
      "given": "complete shadow system (sm, md, lg, xl, 2xl, inner, none)",
      "when": "all elevation tokens are defined",
      "then": "it should validate complete shadow system",
      "validation": {
        "setup": {
          "shadows": {
            "sm": "0 1px 2px",
            "md": "0 4px 6px",
            "lg": "0 10px 15px",
            "xl": "0 20px 25px",
            "2xl": "0 25px 50px",
            "inner": "inset 0 2px 4px",
            "none": "0 0 #0000"
          }
        },
        "assertions": [
          "7 shadow tokens",
          "5 elevation levels + inner + none",
          "Comprehensive depth system"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-001",
      "given": "md shadow applied to card component",
      "when": "card uses theme.shadows.md for moderate elevation",
      "then": "it should render card with medium box-shadow creating depth",
      "application": {
        "theme": {
          "shadows": {
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)"
          }
        },
        "component": "card",
        "expectedCSS": "box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);",
        "expectedDOM": "<div data-testid=\"product-card\" class=\"shadow-md\" style=\"box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);\">Card content</div>",
        "assertions": [
          "Shadow token: theme.shadows.md",
          "Applied as: style=\"box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);\"",
          "Visual result: Card appears elevated above background",
          "Elevation: 4px offset, 6px blur, 10% opacity"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-002",
      "given": "xl shadow applied to modal overlay",
      "when": "modal uses theme.shadows.xl for high elevation above content",
      "then": "it should render modal with dramatic shadow emphasizing importance",
      "application": {
        "theme": {
          "shadows": {
            "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)"
          }
        },
        "component": "modal",
        "expectedCSS": "box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);",
        "expectedDOM": "<div data-testid=\"confirmation-modal\" class=\"shadow-xl\" style=\"box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);\">Modal content</div>",
        "assertions": [
          "Shadow token: theme.shadows.xl",
          "Applied as: style=\"box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);\"",
          "Visual result: Modal floats well above content",
          "Elevation: 20px offset, 25px blur (dramatic depth)"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-003",
      "given": "inner shadow applied to input field",
      "when": "input uses theme.shadows.inner for recessed appearance",
      "then": "it should render input with inset shadow creating depth inward",
      "application": {
        "theme": {
          "shadows": {
            "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)"
          }
        },
        "component": "input",
        "expectedCSS": "box-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.05);",
        "expectedDOM": "<input data-testid=\"text-input\" class=\"shadow-inner\" style=\"box-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.05);\" />",
        "assertions": [
          "Shadow token: theme.shadows.inner",
          "Applied as: style=\"box-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.05);\"",
          "Visual result: Input appears sunken into background",
          "Opposite of elevation: recessed, not raised"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-004",
      "given": "shadow transition on button hover interaction",
      "when": "button hover state increases shadow elevation from md to lg",
      "then": "it should render button with smooth shadow transition creating lift effect",
      "application": {
        "theme": {
          "shadows": {
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
            "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)"
          }
        },
        "component": "button",
        "interaction": "hover",
        "expectedCSS": "box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); transition: box-shadow 200ms; &:hover { box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1); }",
        "expectedDOM": "<button data-testid=\"elevated-button\" style=\"box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); transition: box-shadow 200ms;\" onMouseEnter=\"this.style.boxShadow='0 10px 15px -3px rgb(0 0 0 / 0.1)'\" onMouseLeave=\"this.style.boxShadow='0 4px 6px -1px rgb(0 0 0 / 0.1)'\">Hover me</button>",
        "behavior": "Shadow grows from md to lg on hover, creating perception of button lifting closer",
        "useCases": [
          "Interactive buttons with elevation feedback",
          "Card hover effects (Webflow-style)",
          "Material Design elevation transitions"
        ],
        "assertions": [
          "Default: shadow-md (4px offset, 6px blur)",
          "Hover: shadow-lg (10px offset, 15px blur)",
          "Transition: smooth 200ms animation",
          "Visual result: Button appears to lift on hover",
          "Provides tactile interaction feedback"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-005",
      "given": "colored shadow for brand accent",
      "when": "button uses custom shadow with brand color tint",
      "then": "it should render button with colored shadow matching brand identity",
      "application": {
        "theme": {
          "shadows": {
            "brand": "0 4px 14px 0 rgb(59 130 246 / 0.4)"
          },
          "colors": {
            "primary": "#3b82f6"
          }
        },
        "component": "button",
        "expectedCSS": "box-shadow: 0 4px 14px 0 rgb(59 130 246 / 0.4);",
        "expectedDOM": "<button data-testid=\"brand-button\" style=\"background-color: #3b82f6; box-shadow: 0 4px 14px 0 rgb(59 130 246 / 0.4);\">Get Started</button>",
        "behavior": "Shadow uses primary brand color (blue) instead of neutral black/gray",
        "useCases": [
          "Brand-colored CTA buttons",
          "Neon/glow effects",
          "Modern glassmorphism designs"
        ],
        "assertions": [
          "Shadow color: rgb(59 130 246 / 0.4) (blue with 40% opacity)",
          "Matches theme.colors.primary (#3b82f6)",
          "Visual result: Colored shadow/glow around button",
          "Creates cohesive brand aesthetic",
          "Modern design trend (colored shadows)"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-006",
      "given": "layered shadows for enhanced depth (neumorphism)",
      "when": "element combines multiple shadow values for soft depth",
      "then": "it should render element with multi-layered shadow creating subtle 3D effect",
      "application": {
        "theme": {
          "shadows": {
            "neumorphic": "8px 8px 16px rgb(0 0 0 / 0.1), -8px -8px 16px rgb(255 255 255 / 0.5)"
          }
        },
        "component": "card",
        "expectedCSS": "box-shadow: 8px 8px 16px rgb(0 0 0 / 0.1), -8px -8px 16px rgb(255 255 255 / 0.5);",
        "expectedDOM": "<div data-testid=\"neumorphic-card\" style=\"background: #e0e0e0; box-shadow: 8px 8px 16px rgb(0 0 0 / 0.1), -8px -8px 16px rgb(255 255 255 / 0.5);\">Neumorphic design</div>",
        "behavior": "Dual shadows: dark shadow bottom-right, light shadow top-left creating embossed effect",
        "useCases": [
          "Neumorphism design style",
          "Soft UI elements",
          "Embossed button/card effects"
        ],
        "assertions": [
          "Dual shadows: dark (8px 8px) + light (-8px -8px)",
          "Creates subtle 3D raised/embossed appearance",
          "Visual result: Element appears to emerge from background",
          "Neumorphism design trend"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-007",
      "given": "focus ring shadow for accessibility",
      "when": "input focus state combines border and shadow for clear focus indicator",
      "then": "it should render input with prominent focus shadow for keyboard navigation",
      "application": {
        "theme": {
          "shadows": {
            "focus": "0 0 0 3px rgb(59 130 246 / 0.5)"
          },
          "colors": {
            "primary": "#3b82f6"
          }
        },
        "component": "input",
        "interaction": "focus",
        "expectedCSS": "outline: none; &:focus { box-shadow: 0 0 0 3px rgb(59 130 246 / 0.5); }",
        "expectedDOM": "<input data-testid=\"text-input\" type=\"text\" style=\"border: 1px solid #d1d5db;\" onFocus=\"this.style.boxShadow='0 0 0 3px rgb(59 130 246 / 0.5)'\" onBlur=\"this.style.boxShadow='none'\" />",
        "behavior": "3px blue focus ring appears around input on keyboard focus",
        "useCases": [
          "Keyboard navigation accessibility",
          "Form input focus states",
          "WCAG 2.1 AA compliance (2.4.7 Focus Visible)"
        ],
        "assertions": [
          "Focus shadow: 0 0 0 3px (ring effect, no offset/blur)",
          "Color: primary blue with 50% opacity",
          "Visual result: Clear focus indicator for keyboard users",
          "Accessibility: meets WCAG 2.1 focus requirements",
          "Replaces default browser outline"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-008",
      "given": "responsive shadow scaling for mobile vs desktop",
      "when": "card uses larger shadow on desktop, smaller on mobile for touch interfaces",
      "then": "it should render card with appropriate shadow depth per device",
      "application": {
        "theme": {
          "shadows": {
            "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)"
          }
        },
        "component": "card",
        "responsive": true,
        "expectedCSS": "box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05); @media (min-width: 768px) { box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); }",
        "expectedDOM": {
          "mobile": "<div data-testid=\"responsive-card\" style=\"box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);\">Card content</div>",
          "desktop": "<div data-testid=\"responsive-card\" style=\"box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);\">Card content</div>"
        },
        "behavior": "Mobile: subtle shadow (sm), Desktop: moderate shadow (md)",
        "useCases": [
          "Responsive design systems",
          "Mobile-first shadow hierarchy",
          "Touch vs mouse interface optimization"
        ],
        "assertions": [
          "Mobile (<768px): shadow-sm (subtle, touch-friendly)",
          "Desktop (≥768px): shadow-md (more prominent)",
          "Rationale: Touch interfaces don't need elevation cues as much",
          "Performance: smaller shadows = better mobile performance"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-009",
      "given": "shadow elevation hierarchy in component system",
      "when": "app uses shadows to convey information hierarchy (sm→md→lg→xl→2xl)",
      "then": "it should render components with consistent elevation scale",
      "application": {
        "theme": {
          "shadows": {
            "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
            "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
            "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)",
            "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)"
          }
        },
        "hierarchy": {
          "baseline": "Page background (no shadow)",
          "sm": "Subtle cards, list items",
          "md": "Standard cards, panels",
          "lg": "Emphasized cards, dropdowns",
          "xl": "Modals, dialogs",
          "2xl": "Overlays, highest priority content"
        },
        "expectedDOM": {
          "listItem": "<li data-testid=\"list-item\" style=\"box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);\">Item</li>",
          "card": "<div data-testid=\"card\" style=\"box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);\">Card</div>",
          "dropdown": "<div data-testid=\"dropdown\" style=\"box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);\">Menu</div>",
          "modal": "<div data-testid=\"modal\" style=\"box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);\">Modal</div>"
        },
        "assertions": [
          "5-level elevation system (sm, md, lg, xl, 2xl)",
          "Systematic scale: each level visibly more elevated than previous",
          "Use case mapping: sm (subtle) → 2xl (highest)",
          "Consistent visual hierarchy across app",
          "Material Design-inspired elevation scale"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-APPLICATION-010",
      "given": "active/pressed shadow state for buttons",
      "when": "button active state reduces shadow to simulate press depth",
      "then": "it should render button with reduced shadow creating pressed-in effect",
      "application": {
        "theme": {
          "shadows": {
            "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
            "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)"
          }
        },
        "component": "button",
        "interaction": "active",
        "expectedCSS": "box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); &:active { box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05); transform: translateY(1px); }",
        "expectedDOM": "<button data-testid=\"pressable-button\" style=\"box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);\" onMouseDown=\"this.style.boxShadow='0 1px 2px 0 rgb(0 0 0 / 0.05)'; this.style.transform='translateY(1px)'\" onMouseUp=\"this.style.boxShadow='0 4px 6px -1px rgb(0 0 0 / 0.1)'; this.style.transform='translateY(0)'\">Press me</button>",
        "behavior": "On click: shadow reduces (md→sm) + button moves down 1px, simulating physical press",
        "useCases": [
          "Tactile button interactions",
          "Press-down micro-interactions",
          "Skeuomorphic button feedback"
        ],
        "assertions": [
          "Default: shadow-md (elevated)",
          "Active: shadow-sm (reduced) + translateY(1px)",
          "Visual result: Button appears to press into surface",
          "Provides physical feedback for click action",
          "Enhances perceived interactivity"
        ]
      }
    },
    {
      "id": "APP-THEME-SHADOWS-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full shadows workflow"
    }
  ]
}
