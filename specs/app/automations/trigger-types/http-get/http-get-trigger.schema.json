{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GET Request",
  "description": "Triggered by a GET request",
  "type": "object",
  "properties": {
    "service": {
      "type": "string",
      "const": "http"
    },
    "event": {
      "type": "string",
      "const": "get"
    },
    "params": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "respondImmediately": {
          "default": false,
          "type": "boolean"
        }
      },
      "required": ["path"],
      "additionalProperties": false
    }
  },
  "required": ["service", "event", "params"],
  "additionalProperties": false,
  "$id": "http-get-trigger.schema.json",
  "x-specs": [
    {
      "id": "APP-HTTP-GET-TRIGGER-001",
      "given": "Facebook sends GET validation request",
      "when": "I respond with hub.challenge",
      "then": "it should succeed"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-002",
      "given": "hub.mode is not subscribe",
      "when": "I not respond with challenge",
      "then": "it should succeed"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-003",
      "given": "I am working with a get request",
      "when": "I not found the automation",
      "then": "it should complete successfully"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-004",
      "given": "I am working with a wrong path",
      "when": "I not found the automation",
      "then": "it should complete successfully"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-005",
      "given": "LinkedIn sends GET validation request",
      "when": "I respond with correctly computed challengeResponse",
      "then": "it should succeed"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-006",
      "given": "I am working with correct HMAC computation",
      "when": "I handle GET validation for HTTP trigger path",
      "then": "it should complete successfully"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-007",
      "given": "entity with service='http'",
      "when": "processing configuration",
      "then": "correct handler should be selected"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-008",
      "given": "invalid service value",
      "when": "validating configuration",
      "then": "clear error message should identify the issue"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-009",
      "given": "entity with event='get'",
      "when": "processing configuration",
      "then": "correct handler should be selected"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-010",
      "given": "invalid event value",
      "when": "validating configuration",
      "then": "clear error message should identify the issue"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-011",
      "given": "user configures params",
      "when": "validating input",
      "then": "value should meet schema requirements"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-012",
      "given": "params is set",
      "when": "processing configuration",
      "then": "value should be used correctly"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-013",
      "given": "user provides path",
      "when": "validating input",
      "then": "string value should be accepted"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-014",
      "given": "path is empty string",
      "when": "validating input",
      "then": "behavior should follow optional/required rules"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-015",
      "given": "respondImmediately is true",
      "when": "processing entity",
      "then": "corresponding behavior should be enforced"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-016",
      "given": "respondImmediately is false (default: False)",
      "when": "processing entity",
      "then": "corresponding behavior should not be enforced"
    },
    {
      "id": "APP-HTTP-GET-TRIGGER-017",
      "given": "configuration with respondImmediately",
      "when": "validating settings",
      "then": "boolean value should be accepted"
    }
  ]
}
