{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Icon",
  "description": "Display an icon",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "icon"
    },
    "name": {
      "type": "string",
      "description": "Icon name from icon library"
    },
    "size": {
      "type": "integer"
    },
    "color": {
      "type": "string"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "name", "position"],
  "additionalProperties": false,
  "specs": []
}
