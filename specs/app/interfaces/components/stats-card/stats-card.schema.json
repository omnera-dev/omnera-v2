{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stats Card",
  "description": "Display a key metric with label",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "stats-card"
    },
    "label": {
      "type": "string"
    },
    "value": {
      "type": "string",
      "description": "Statistic value or template expression"
    },
    "change": {
      "type": "string",
      "description": "Change indicator (e.g., '+12%')"
    },
    "trend": {
      "enum": ["up", "down", "neutral"]
    },
    "icon": {
      "type": "string"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "label", "value", "position"],
  "additionalProperties": false
}
