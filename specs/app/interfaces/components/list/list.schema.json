{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "List View",
  "description": "Vertical list of items",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "list"
    },
    "dataSource": {
      "type": "string"
    },
    "itemTemplate": {
      "type": "object",
      "description": "Template for rendering each list item"
    },
    "emptyState": {
      "type": "string"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "dataSource", "position"],
  "additionalProperties": false,
  "specs": []
}
