{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pie Chart",
  "description": "Pie or donut chart",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "pie-chart"
    },
    "dataSource": {
      "type": "string"
    },
    "labelField": {
      "type": "string"
    },
    "valueField": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "variant": {
      "enum": ["pie", "donut"]
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "dataSource", "labelField", "valueField", "position"],
  "additionalProperties": false,
  "x-specs": []
}
