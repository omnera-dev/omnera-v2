{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Number Input",
  "description": "Numeric input with validation",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "number-input"
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "defaultValue": {
      "type": "number"
    },
    "min": {
      "type": "number"
    },
    "max": {
      "type": "number"
    },
    "step": {
      "type": "number"
    },
    "required": {
      "type": "boolean"
    },
    "disabled": {
      "type": "boolean"
    },
    "onChange": {
      "$ref": "../common/onChange.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false
}
