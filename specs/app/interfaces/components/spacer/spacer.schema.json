{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spacer",
  "description": "Empty space for layout control",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "spacer"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false
}
