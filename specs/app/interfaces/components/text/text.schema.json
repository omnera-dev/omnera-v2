{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Text Display",
  "description": "Static or dynamic text content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "text"
    },
    "content": {
      "type": "string",
      "description": "Text content or template expression"
    },
    "variant": {
      "enum": ["body", "caption", "label"]
    },
    "weight": {
      "enum": ["normal", "medium", "semibold", "bold"]
    },
    "color": {
      "type": "string"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "content", "position"],
  "additionalProperties": false,
  "specs": []
}
