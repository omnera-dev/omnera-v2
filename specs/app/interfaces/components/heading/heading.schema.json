{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Heading",
  "description": "Heading text (h1-h6)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "heading"
    },
    "level": {
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    },
    "text": {
      "type": "string"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "level", "text", "position"],
  "additionalProperties": false,
  "specs": []
}
