{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Radio Group",
  "description": "Radio button group for single selection",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "radio-group"
    },
    "label": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": ["label", "value"]
      }
    },
    "defaultValue": {
      "type": "string"
    },
    "disabled": {
      "type": "boolean"
    },
    "onChange": {
      "$ref": "../common/onChange.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "options", "position"],
  "additionalProperties": false,
  "x-specs": []
}
