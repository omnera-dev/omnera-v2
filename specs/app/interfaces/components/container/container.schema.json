{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Container",
  "description": "Group components together",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "container"
    },
    "title": {
      "type": "string"
    },
    "padding": {
      "type": "integer"
    },
    "border": {
      "type": "boolean"
    },
    "backgroundColor": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "description": "Nested components (relative positioning)"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false,
  "x-specs": []
}
