{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Text Input",
  "description": "Single-line text input field",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "text-input"
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "defaultValue": {
      "type": "string"
    },
    "required": {
      "type": "boolean"
    },
    "disabled": {
      "type": "boolean"
    },
    "validation": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        }
      }
    },
    "onChange": {
      "$ref": "../common/onChange.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false,
  "specs": []
}
