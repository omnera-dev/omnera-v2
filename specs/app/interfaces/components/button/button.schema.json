{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Button",
  "description": "Clickable button",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "button"
    },
    "text": {
      "type": "string"
    },
    "variant": {
      "enum": ["primary", "secondary", "outline", "ghost", "destructive"]
    },
    "size": {
      "enum": ["sm", "md", "lg"]
    },
    "disabled": {
      "type": "boolean"
    },
    "loading": {
      "type": "boolean"
    },
    "onClick": {
      "$ref": "../common/onClick.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "text", "position"],
  "additionalProperties": false,
  "x-specs": []
}
