{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stack Container",
  "description": "Stack components vertically or horizontally",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "stack"
    },
    "direction": {
      "enum": ["horizontal", "vertical"]
    },
    "gap": {
      "type": "integer"
    },
    "alignment": {
      "enum": ["start", "center", "end", "stretch"]
    },
    "components": {
      "type": "array"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "direction", "position"],
  "additionalProperties": false,
  "specs": []
}
