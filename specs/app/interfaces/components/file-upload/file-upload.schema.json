{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "File Upload",
  "description": "File upload button with drag-and-drop",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "file-upload"
    },
    "label": {
      "type": "string"
    },
    "accept": {
      "type": "string",
      "description": "Accepted file types (e.g., 'image/*')"
    },
    "maxSize": {
      "type": "integer",
      "description": "Max file size in bytes"
    },
    "multiple": {
      "type": "boolean"
    },
    "required": {
      "type": "boolean"
    },
    "disabled": {
      "type": "boolean"
    },
    "onChange": {
      "$ref": "../common/onChange.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false
}
