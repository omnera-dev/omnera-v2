{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bar Chart",
  "description": "Vertical or horizontal bar chart",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "bar-chart"
    },
    "dataSource": {
      "type": "string"
    },
    "xAxis": {
      "type": "string",
      "description": "Field for x-axis"
    },
    "yAxis": {
      "type": "string",
      "description": "Field for y-axis"
    },
    "title": {
      "type": "string"
    },
    "orientation": {
      "enum": ["vertical", "horizontal"]
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "dataSource", "xAxis", "yAxis", "position"],
  "additionalProperties": false
}
