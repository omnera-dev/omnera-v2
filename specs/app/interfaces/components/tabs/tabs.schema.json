{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Container",
  "description": "Tabbed interface for organizing content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "tabs"
    },
    "tabs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "components": {
            "type": "array"
          }
        },
        "required": ["label", "value"]
      }
    },
    "defaultTab": {
      "type": "string"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "tabs", "position"],
  "additionalProperties": false,
  "specs": []
}
