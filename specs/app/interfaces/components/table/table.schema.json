{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Table Component",
  "description": "Sortable, filterable data table",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "table"
    },
    "dataSource": {
      "type": "string",
      "description": "Query ID or template expression"
    },
    "columns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "header": {
            "type": "string"
          },
          "type": {
            "enum": ["text", "number", "date", "boolean", "image", "link"]
          },
          "sortable": {
            "type": "boolean"
          },
          "filterable": {
            "type": "boolean"
          },
          "width": {
            "type": "integer"
          }
        },
        "required": ["field", "header"]
      }
    },
    "searchable": {
      "type": "boolean",
      "default": true
    },
    "pagination": {
      "type": "boolean",
      "default": true
    },
    "pageSize": {
      "type": "integer",
      "default": 20
    },
    "selectable": {
      "enum": ["none", "single", "multiple"],
      "default": "none"
    },
    "onRowClick": {
      "type": "string",
      "description": "Action when row is clicked"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "dataSource", "columns", "position"],
  "additionalProperties": false
}
