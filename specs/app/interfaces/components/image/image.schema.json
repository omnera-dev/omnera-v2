{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Image",
  "description": "Display an image",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "image"
    },
    "src": {
      "type": "string"
    },
    "alt": {
      "type": "string"
    },
    "fit": {
      "enum": ["contain", "cover", "fill", "none"]
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "src", "alt", "position"],
  "additionalProperties": false,
  "specs": []
}
