{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Multi-select Dropdown",
  "description": "Multi-select dropdown with tags",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "multiselect"
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": ["label", "value"]
      }
    },
    "defaultValue": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required": {
      "type": "boolean"
    },
    "disabled": {
      "type": "boolean"
    },
    "onChange": {
      "$ref": "../common/onChange.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false,
  "x-specs": []
}
