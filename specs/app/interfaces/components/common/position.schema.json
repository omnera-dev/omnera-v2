{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Position",
  "description": "Grid position and dimensions for component placement. Uses a 12-column grid system with pixel-based positioning.",
  "type": "object",
  "properties": {
    "x": {
      "type": "integer",
      "minimum": 0,
      "maximum": 11,
      "description": "Column position (0-11 in 12-column grid)"
    },
    "y": {
      "type": "integer",
      "minimum": 0,
      "description": "Row position (0-based, pixel units)"
    },
    "width": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12,
      "description": "Component width in grid columns (1-12)"
    },
    "height": {
      "type": "integer",
      "minimum": 1,
      "description": "Component height in grid units"
    }
  },
  "required": ["x", "y", "width", "height"],
  "additionalProperties": false,
  "specs": []
}
