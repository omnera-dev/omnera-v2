{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Textarea",
  "description": "Multi-line text input",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "textarea"
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "defaultValue": {
      "type": "string"
    },
    "rows": {
      "type": "integer",
      "minimum": 2
    },
    "required": {
      "type": "boolean"
    },
    "disabled": {
      "type": "boolean"
    },
    "onChange": {
      "$ref": "../common/onChange.schema.json"
    },
    "position": {
      "$ref": "../common/position.schema.json"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["id", "type", "position"],
  "additionalProperties": false
}
