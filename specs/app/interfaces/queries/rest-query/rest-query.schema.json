{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "REST API Query",
  "description": "Fetch data from an external REST API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "rest"
    },
    "method": {
      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    },
    "url": {
      "type": "string"
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "body": {
      "type": "object"
    }
  },
  "required": ["id", "type", "method", "url"],
  "additionalProperties": false,
  "x-specs": []
}
