{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Table Query",
  "description": "Fetch data directly from a database table",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "const": "table"
    },
    "table": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "select": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Columns to select"
    },
    "where": {
      "type": "object",
      "description": "Filter conditions"
    },
    "orderBy": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "direction": {
            "enum": ["asc", "desc"]
          }
        }
      }
    },
    "limit": {
      "type": "integer"
    }
  },
  "required": ["id", "type", "table"],
  "additionalProperties": false,
  "x-specs": []
}
