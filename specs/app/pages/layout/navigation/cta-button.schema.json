{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "cta-button.schema.json",
  "title": "CTA Button",
  "description": "Call-to-action button configuration",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "description": "Button text"
    },
    "href": {
      "type": "string",
      "description": "Button link destination"
    },
    "variant": {
      "type": "string",
      "enum": ["primary", "secondary", "outline", "ghost", "link"],
      "default": "primary",
      "description": "Button style variant"
    },
    "size": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl"],
      "default": "md",
      "description": "Button size"
    },
    "color": {
      "type": "string",
      "description": "Button color (references theme colors)"
    },
    "icon": {
      "type": "string",
      "description": "Optional icon name"
    },
    "iconPosition": {
      "type": "string",
      "enum": ["left", "right"],
      "default": "left",
      "description": "Icon position relative to text"
    }
  },
  "required": ["text", "href"],
  "additionalProperties": false,
  "examples": [
    {
      "text": "Get Started",
      "href": "/signup",
      "variant": "primary",
      "size": "lg",
      "color": "orange"
    },
    {
      "text": "Download",
      "href": "/download",
      "variant": "outline",
      "icon": "download",
      "iconPosition": "right"
    }
  ],
  "x-specs": [
    {
      "id": "APP-PAGES-CTA-001",
      "given": "a CTA button with text and href",
      "when": "button is { text: 'Get Started', href: '/signup' }",
      "then": "it should render call-to-action button",
      "application": {
        "cta": { "text": "Get Started", "href": "/signup" },
        "expectedDOM": "<a href=\"/signup\" class=\"btn btn-primary btn-md\">Get Started</a>",
        "assertions": [
          "text + href: required properties",
          "Default: variant='primary', size='md'",
          "Common for: signup, trial, demo"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-002",
      "given": "a CTA button with variant 'primary'",
      "when": "variant is 'primary' (default)",
      "then": "it should apply primary button styling",
      "application": {
        "cta": { "text": "Sign Up Free", "href": "/signup", "variant": "primary" },
        "expectedDOM": "<a href=\"/signup\" class=\"btn btn-primary bg-blue-600 text-white hover:bg-blue-700\">Sign Up Free</a>",
        "assertions": [
          "variant: 'primary' (default)",
          "Most prominent button style",
          "Solid background + white text",
          "Use for: main CTA"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-003",
      "given": "a CTA button with 5 variant options",
      "when": "variant enum includes primary, secondary, outline, ghost, link",
      "then": "it should support all button style variants",
      "application": {
        "variants": [
          { "variant": "primary", "description": "Solid, most prominent (default)" },
          { "variant": "secondary", "description": "Muted solid background" },
          { "variant": "outline", "description": "Border only, transparent background" },
          { "variant": "ghost", "description": "Transparent, hover effect only" },
          { "variant": "link", "description": "Text link styling" }
        ],
        "assertions": [
          "5 variant styles",
          "primary: Main CTA",
          "secondary: Alternative action",
          "outline: Less emphasis",
          "ghost/link: Subtle actions"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-004",
      "given": "a CTA button with size",
      "when": "size is 'lg' (sm, md, lg, xl)",
      "then": "it should apply size styling",
      "application": {
        "cta": { "text": "Start Free Trial", "href": "/trial", "size": "lg" },
        "sizes": {
          "sm": "py-1 px-3 text-sm",
          "md": "py-2 px-4 text-base (default)",
          "lg": "py-3 px-6 text-lg",
          "xl": "py-4 px-8 text-xl"
        },
        "expectedDOM": "<a href=\"/trial\" class=\"btn btn-primary btn-lg py-3 px-6 text-lg\">Start Free Trial</a>",
        "assertions": [
          "size: 4 options (sm, md, lg, xl)",
          "Controls padding + text size",
          "lg/xl: Hero section CTAs",
          "sm/md: Navigation buttons"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-005",
      "given": "a CTA button with theme color",
      "when": "color is 'orange' (references theme colors)",
      "then": "it should apply theme-based color",
      "application": {
        "cta": { "text": "Shop Now", "href": "/shop", "variant": "primary", "color": "orange" },
        "themeColors": {
          "orange": "#F97316",
          "blue": "#3B82F6",
          "green": "#10B981",
          "red": "#EF4444"
        },
        "expectedDOM": "<a href=\"/shop\" class=\"btn btn-primary\" style=\"background-color: #F97316; color: #FFFFFF;\">Shop Now</a>",
        "assertions": [
          "color: Theme color reference",
          "Overrides default button color",
          "Common colors: orange (urgency), green (success), blue (trust)"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-006",
      "given": "a CTA button with icon",
      "when": "icon is 'download' with iconPosition 'right'",
      "then": "it should display icon on right side of text",
      "application": {
        "cta": {
          "text": "Download App",
          "href": "/download",
          "icon": "download",
          "iconPosition": "right"
        },
        "expectedDOM": "<a href=\"/download\" class=\"btn btn-primary flex items-center gap-2\"><span>Download App</span><svg class=\"icon-download\">...</svg></a>",
        "assertions": [
          "icon: Icon name",
          "iconPosition: 'right' â†’ icon after text",
          "Common icons: download, arrow-right, external-link"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-007",
      "given": "a CTA button with icon on left",
      "when": "iconPosition is 'left' (default)",
      "then": "it should display icon on left side of text",
      "application": {
        "cta": {
          "text": "Get Started",
          "href": "/signup",
          "icon": "arrow-right",
          "iconPosition": "left"
        },
        "expectedDOM": "<a href=\"/signup\" class=\"btn btn-primary flex items-center gap-2\"><svg class=\"icon-arrow-right\">...</svg><span>Get Started</span></a>",
        "assertions": [
          "iconPosition: 'left' (default)",
          "Icon before text",
          "Common pattern: arrow + action text"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-008",
      "given": "a CTA button in navigation",
      "when": "used in navigation.cta property",
      "then": "it should serve as prominent call-to-action in header",
      "application": {
        "navigation": {
          "logo": "/logo.svg",
          "links": [{ "label": "Home", "href": "/" }],
          "cta": { "text": "Try Free", "href": "/trial", "variant": "primary", "size": "md" }
        },
        "expectedDOM": "<nav class=\"flex items-center justify-between\"><img src=\"/logo.svg\" /><div class=\"nav-links\"><a href=\"/\">Home</a></div><a href=\"/trial\" class=\"btn btn-primary btn-md\">Try Free</a></nav>",
        "assertions": [
          "CTA in navigation header",
          "Positioned at right end (common pattern)",
          "Most prominent element in nav",
          "Drives conversions from every page"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-009",
      "given": "a CTA button with required text and href",
      "when": "both text and href are provided",
      "then": "it should validate as complete CTA configuration",
      "application": {
        "valid": { "text": "Get Started", "href": "/signup" },
        "invalid": [{ "text": "No href" }, { "href": "/signup" }, {}],
        "assertions": [
          "required: ['text', 'href']",
          "text: Button label (string)",
          "href: Destination URL (string)"
        ]
      }
    },
    {
      "id": "APP-PAGES-CTA-010",
      "given": "a CTA button with all optional properties",
      "when": "variant, size, color, icon, iconPosition are set",
      "then": "it should support fully customized button appearance",
      "application": {
        "cta": {
          "text": "Shop Now",
          "href": "/shop",
          "variant": "primary",
          "size": "xl",
          "color": "orange",
          "icon": "arrow-right",
          "iconPosition": "right"
        },
        "expectedDOM": "<a href=\"/shop\" class=\"btn btn-primary btn-xl py-4 px-8 text-xl flex items-center gap-3\" style=\"background-color: #F97316; color: #FFFFFF;\"><span>Shop Now</span><svg class=\"icon-arrow-right\">...</svg></a>",
        "assertions": [
          "Fully customized: variant + size + color + icon + position",
          "All optional properties set",
          "Maximum visual impact",
          "Use for: Hero CTAs, special campaigns"
        ]
      }
    },
    {
      "id": "APP-PAGES-LAYOUT-NAVIGATION-CTA-BUTTON-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full CTA button workflow"
    }
  ]
}
