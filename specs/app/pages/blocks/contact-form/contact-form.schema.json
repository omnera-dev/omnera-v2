{
  "$id": "contact-form.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contact Form Section",
  "description": "Contact form block embedded in page",
  "type": "object",
  "properties": {
    "type": {
      "const": "contact-form"
    },
    "heading": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "fields": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "label": {
            "type": "string"
          },
          "type": {
            "enum": ["text", "email", "textarea", "select"]
          },
          "required": {
            "type": "boolean"
          },
          "placeholder": {
            "type": "string"
          }
        },
        "required": ["name", "label", "type"]
      }
    },
    "submitText": {
      "type": "string"
    },
    "successMessage": {
      "type": "string"
    },
    "action": {
      "type": "string",
      "description": "Server action or endpoint to handle form submission"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "fields", "action"],
  "additionalProperties": false
}
