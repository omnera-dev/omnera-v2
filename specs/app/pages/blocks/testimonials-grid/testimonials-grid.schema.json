{
  "$id": "testimonials-grid.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Testimonials - Grid",
  "description": "Grid of customer testimonials",
  "type": "object",
  "properties": {
    "type": {
      "const": "testimonials-grid"
    },
    "heading": {
      "type": "string"
    },
    "testimonials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "quote": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "company": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          }
        },
        "required": ["quote", "author"]
      }
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "testimonials"],
  "additionalProperties": false,
  "specs": []
}
