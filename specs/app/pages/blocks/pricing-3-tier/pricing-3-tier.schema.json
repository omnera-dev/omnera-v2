{
  "$id": "pricing-3-tier.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pricing - 3 Tier",
  "description": "Three-tier pricing table",
  "type": "object",
  "properties": {
    "type": {
      "const": "pricing-3-tier"
    },
    "heading": {
      "type": "string"
    },
    "subheading": {
      "type": "string"
    },
    "billingInterval": {
      "enum": ["monthly", "yearly", "both"]
    },
    "tiers": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "interval": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "features": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "cta": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "href": {
                "type": "string"
              }
            }
          },
          "highlighted": {
            "type": "boolean"
          }
        },
        "required": ["name", "price", "features"]
      }
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "tiers"],
  "additionalProperties": false
}
