{
  "$id": "faq-section.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FAQ Section",
  "description": "Frequently asked questions with expandable answers",
  "type": "object",
  "properties": {
    "type": {
      "const": "faq-section"
    },
    "heading": {
      "type": "string"
    },
    "faqs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          }
        },
        "required": ["question", "answer"]
      }
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "faqs"],
  "additionalProperties": false,
  "specs": []
}
