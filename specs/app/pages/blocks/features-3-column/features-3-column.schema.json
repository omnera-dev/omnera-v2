{
  "$id": "features-3-column.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Features - 3 Column Grid",
  "description": "Three-column feature grid with icons, titles, and descriptions",
  "type": "object",
  "properties": {
    "type": {
      "const": "features-3-column"
    },
    "heading": {
      "type": "string"
    },
    "subheading": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "icon": {
            "type": "string",
            "description": "Icon identifier or emoji"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["title", "description"]
      }
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "features"],
  "additionalProperties": false,
  "specs": []
}
