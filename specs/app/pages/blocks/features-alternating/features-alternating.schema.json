{
  "$id": "features-alternating.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Features - Alternating",
  "description": "Alternating image and text sections",
  "type": "object",
  "properties": {
    "type": {
      "const": "features-alternating"
    },
    "heading": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "imagePosition": {
            "enum": ["left", "right"]
          }
        },
        "required": ["title", "description", "image"]
      }
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "features"],
  "additionalProperties": false
}
