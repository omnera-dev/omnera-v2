{
  "$id": "hero-centered.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hero Section - Centered",
  "description": "Centered hero section with heading, subheading, and CTA buttons",
  "type": "object",
  "properties": {
    "type": {
      "const": "hero-centered"
    },
    "heading": {
      "type": "string",
      "description": "Main headline",
      "examples": ["Build internal tools 10x faster"]
    },
    "subheading": {
      "type": "string",
      "description": "Supporting text below headline",
      "examples": ["No-code platform for creating business applications"]
    },
    "primaryCta": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "href": {
          "type": "string"
        },
        "variant": {
          "enum": ["primary", "secondary", "outline"]
        }
      },
      "required": ["text", "href"]
    },
    "secondaryCta": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "href": {
          "type": "string"
        }
      }
    },
    "backgroundImage": {
      "type": "string"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "heading"],
  "additionalProperties": false,
  "specs": []
}
