{
  "$id": "header-nav.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Header Navigation",
  "description": "Site header with logo and navigation links",
  "type": "object",
  "properties": {
    "type": {
      "const": "header-nav"
    },
    "logo": {
      "type": "object",
      "properties": {
        "image": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "href": {
          "type": "string"
        }
      }
    },
    "navigation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "children": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                },
                "href": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": ["text", "href"]
      }
    },
    "cta": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "href": {
          "type": "string"
        }
      }
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type"],
  "additionalProperties": false,
  "specs": []
}
