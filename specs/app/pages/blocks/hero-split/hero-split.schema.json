{
  "$id": "hero-split.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hero Section - Split",
  "description": "Two-column hero with content on left, image on right",
  "type": "object",
  "properties": {
    "type": {
      "const": "hero-split"
    },
    "heading": {
      "type": "string"
    },
    "subheading": {
      "type": "string"
    },
    "primaryCta": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "href": {
          "type": "string"
        }
      },
      "required": ["text", "href"]
    },
    "image": {
      "type": "string",
      "description": "Image URL for right side"
    },
    "imageAlt": {
      "type": "string"
    },
    "condition": {
      "$ref": "../common/condition.schema.json"
    }
  },
  "required": ["type", "heading", "image"],
  "additionalProperties": false,
  "specs": []
}
