{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "responsive.schema.json",
  "title": "Responsive Variants",
  "description": "Breakpoint-specific component overrides for responsive design",
  "type": "object",
  "properties": {
    "mobile": {
      "$ref": "#/definitions/variantOverrides"
    },
    "sm": {
      "$ref": "#/definitions/variantOverrides"
    },
    "md": {
      "$ref": "#/definitions/variantOverrides"
    },
    "lg": {
      "$ref": "#/definitions/variantOverrides"
    },
    "xl": {
      "$ref": "#/definitions/variantOverrides"
    },
    "2xl": {
      "$ref": "#/definitions/variantOverrides"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "variantOverrides": {
      "type": "object",
      "description": "Component properties to override at this breakpoint",
      "properties": {
        "props": {
          "type": "object",
          "description": "Props to override",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9]*$": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                },
                {
                  "type": "object"
                },
                {
                  "type": "array"
                }
              ]
            }
          }
        },
        "content": {
          "type": "string",
          "description": "Content to display at this breakpoint"
        },
        "visible": {
          "type": "boolean",
          "description": "Show/hide component at this breakpoint"
        },
        "children": {
          "type": "array",
          "description": "Different children at this breakpoint"
        }
      },
      "additionalProperties": false
    }
  },
  "examples": [
    {
      "mobile": {
        "props": {
          "className": "text-2xl text-center"
        },
        "content": "Welcome!",
        "visible": true
      },
      "md": {
        "props": {
          "className": "text-4xl text-left"
        },
        "content": "Welcome to Our Platform"
      },
      "lg": {
        "props": {
          "className": "text-6xl text-left font-bold"
        },
        "content": "Welcome to Our Amazing Platform"
      }
    },
    {
      "mobile": {
        "visible": false
      },
      "lg": {
        "visible": true
      }
    }
  ],
  "x-specs": [
    {
      "id": "APP-RESPONSIVE-001",
      "given": "a heading with mobile-specific props",
      "when": "viewed on mobile device",
      "then": "it should apply mobile className and styles",
      "application": {
        "component": {"type": "h1", "responsive": {"mobile": {"props": {"className": "text-2xl text-center"}}}},
        "breakpoint": "mobile (<640px)",
        "assertions": ["Mobile: text-2xl text-center", "Optimized for small screens"]
      }
    },
    {
      "id": "APP-RESPONSIVE-002",
      "given": "a heading with different content per breakpoint (mobile, md, lg)",
      "when": "viewport changes from mobile to tablet to desktop",
      "then": "content should update to match each breakpoint",
      "application": {
        "component": {"type": "h1", "responsive": {"mobile": {"content": "Welcome!"}, "md": {"content": "Welcome to Our Platform"}, "lg": {"content": "Welcome to Our Amazing Platform"}}},
        "assertions": ["Mobile: 'Welcome!'", "Tablet (md): 'Welcome to Our Platform'", "Desktop (lg): Full text"]
      }
    },
    {
      "id": "APP-RESPONSIVE-003",
      "given": "a component with visible false on mobile, visible true on lg",
      "when": "viewport changes from mobile to desktop",
      "then": "component should be hidden on mobile and shown on large screens",
      "application": {
        "component": {"type": "div", "responsive": {"mobile": {"visible": false}, "lg": {"visible": true}}},
        "assertions": ["Mobile: hidden (visible=false)", "Desktop (lg): shown (visible=true)", "Progressive disclosure"]
      }
    },
    {
      "id": "APP-RESPONSIVE-004",
      "given": "a component with different children at mobile vs desktop",
      "when": "viewport changes",
      "then": "it should render different child components based on breakpoint",
      "application": {
        "component": {"type": "nav", "responsive": {"mobile": {"children": [{"type": "icon", "props": {"name": "menu"}}]}, "lg": {"children": [{"type": "a", "content": "Home"}, {"type": "a", "content": "About"}]}}},
        "assertions": ["Mobile: Hamburger icon", "Desktop: Full navigation links", "Adaptive UI structure"]
      }
    },
    {
      "id": "APP-RESPONSIVE-005",
      "given": "a component with props overrides at sm breakpoint",
      "when": "viewport reaches 640px (sm)",
      "then": "it should apply sm-specific props",
      "application": {
        "component": {"type": "div", "responsive": {"sm": {"props": {"className": "max-w-sm"}}}},
        "breakpoint": "sm (≥640px)",
        "assertions": ["Small screens: max-w-sm", "Tailwind breakpoint: sm"]
      }
    },
    {
      "id": "APP-RESPONSIVE-006",
      "given": "a component with props overrides at md breakpoint",
      "when": "viewport reaches 768px (md)",
      "then": "it should apply md-specific props",
      "application": {
        "component": {"type": "div", "responsive": {"md": {"props": {"className": "max-w-md grid grid-cols-2"}}}},
        "breakpoint": "md (≥768px)",
        "assertions": ["Medium screens: max-w-md grid-cols-2", "Tablet layout"]
      }
    },
    {
      "id": "APP-RESPONSIVE-007",
      "given": "a component with props overrides at xl and 2xl breakpoints",
      "when": "viewport reaches extra large sizes",
      "then": "it should apply xl/2xl-specific props for very wide screens",
      "application": {
        "component": {"type": "div", "responsive": {"xl": {"props": {"className": "max-w-7xl"}}, "2xl": {"props": {"className": "max-w-screen-2xl"}}}},
        "breakpoints": {"xl": "≥1280px", "2xl": "≥1536px"},
        "assertions": ["Extra large: max-w-7xl", "Ultra wide: max-w-screen-2xl"]
      }
    },
    {
      "id": "APP-RESPONSIVE-008",
      "given": "a component with mobile-first progression (mobile → sm → md → lg)",
      "when": "viewport expands from mobile to desktop",
      "then": "each breakpoint should override the previous, creating progressive enhancement",
      "application": {
        "component": {"type": "h1", "responsive": {"mobile": {"props": {"className": "text-xl"}}, "sm": {"props": {"className": "text-2xl"}}, "md": {"props": {"className": "text-4xl"}}, "lg": {"props": {"className": "text-6xl"}}}},
        "progression": ["mobile: text-xl", "sm: text-2xl (overrides mobile)", "md: text-4xl (overrides sm)", "lg: text-6xl (overrides md)"],
        "assertions": ["Mobile-first design", "Progressive enhancement", "Each breakpoint builds on previous"]
      }
    },
    {
      "id": "APP-RESPONSIVE-009",
      "given": "a button with props, content, and visible all configured per breakpoint",
      "when": "viewport changes",
      "then": "all three override types should apply simultaneously at each breakpoint",
      "application": {
        "component": {"type": "button", "responsive": {"mobile": {"props": {"className": "btn-sm"}, "content": "Menu", "visible": true}, "lg": {"props": {"className": "btn-lg"}, "content": "Open Navigation", "visible": true}}},
        "assertions": ["Mobile: btn-sm + 'Menu' + visible", "Desktop: btn-lg + 'Open Navigation' + visible", "All override types simultaneously"]
      }
    },
    {
      "id": "APP-RESPONSIVE-010",
      "given": "a navigation menu with visible true on mobile, different children on desktop",
      "when": "switching between mobile and desktop views",
      "then": "mobile should show hamburger menu, desktop should show full navigation links",
      "application": {
        "component": {"type": "nav", "responsive": {"mobile": {"visible": true, "children": [{"type": "button", "props": {"ariaLabel": "Menu"}, "children": [{"type": "icon", "props": {"name": "menu"}}]}]}, "lg": {"visible": true, "children": [{"type": "a", "props": {"href": "/"}, "content": "Home"}, {"type": "a", "props": {"href": "/about"}, "content": "About"}, {"type": "a", "props": {"href": "/contact"}, "content": "Contact"}]}}},
        "assertions": ["Mobile: Hamburger button with menu icon", "Desktop: Full navigation with 3 links", "Responsive navigation pattern"]
      }
    },
    {
      "id": "APP-PAGES-RESPONSIVE-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full responsive workflow"
    }
  ]
}
