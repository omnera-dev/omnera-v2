{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "i18n.schema.json",
  "title": "Component Internationalization",
  "description": "Component-level translations for multi-language support",
  "type": "object",
  "patternProperties": {
    "^[a-z]{2}(-[A-Z]{2})?$": {
      "type": "object",
      "description": "Translations for this language",
      "properties": {
        "content": {
          "type": "string",
          "description": "Translated content"
        },
        "props": {
          "type": "object",
          "description": "Language-specific prop overrides",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9]*$": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                }
              ]
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "en-US": {
        "content": "Welcome to our platform"
      },
      "fr-FR": {
        "content": "Bienvenue sur notre plateforme"
      },
      "es-ES": {
        "content": "Bienvenido a nuestra plataforma"
      }
    },
    {
      "en-US": {
        "content": "Get Started",
        "props": {
          "aria-label": "Begin your journey"
        }
      },
      "fr-FR": {
        "content": "Commencer",
        "props": {
          "aria-label": "Commencez votre voyage"
        }
      }
    }
  ],
  "specs": []
}
