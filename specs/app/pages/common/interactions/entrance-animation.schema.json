{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entrance-animation.schema.json",
  "title": "Entrance Animation",
  "description": "Animation played when page loads",
  "type": "object",
  "properties": {
    "animation": {
      "type": "string",
      "enum": ["fadeIn", "fadeInUp", "fadeInDown", "zoomIn", "slideInUp", "slideInDown"],
      "description": "Animation type"
    },
    "delay": {
      "type": "string",
      "pattern": "^[0-9]+(ms|s)$",
      "default": "0ms",
      "description": "Delay before animation starts"
    },
    "duration": {
      "type": "string",
      "pattern": "^[0-9]+(ms|s)$",
      "default": "600ms",
      "description": "Animation duration"
    },
    "stagger": {
      "type": "string",
      "pattern": "^[0-9]+(ms|s)$",
      "description": "Delay between sibling animations",
      "examples": ["50ms", "100ms"]
    }
  },
  "required": ["animation"],
  "additionalProperties": false,
  "examples": [
    {
      "animation": "fadeInUp",
      "delay": "200ms",
      "duration": "800ms"
    },
    {
      "animation": "fadeIn",
      "stagger": "100ms"
    }
  ],
  "x-specs": [
    {
      "id": "APP-INTERACTION-ENTRANCE-001",
      "given": "a component with entrance animation 'fadeIn'",
      "when": "page loads",
      "then": "it should fade in smoothly",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeIn"}}},
        "behavior": "Page load → Fade in (opacity: 0 → 1)",
        "assertions": ["animation: 'fadeIn' (required)", "Default duration: 600ms", "Plays once on page load"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-002",
      "given": "a component with entrance animation 'fadeInUp'",
      "when": "page loads",
      "then": "it should fade in while moving up from below",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp"}}},
        "behavior": "Page load → Fade in + translate upward (opacity: 0 → 1, translateY: +20px → 0)",
        "assertions": ["animation: 'fadeInUp' enum value", "Combined opacity + transform", "Popular hero section animation"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-003",
      "given": "a component with entrance animation 'zoomIn'",
      "when": "page loads",
      "then": "it should zoom in from small to normal size",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "zoomIn"}}},
        "behavior": "Page load → Zoom in (scale: 0.8 → 1.0)",
        "assertions": ["animation: 'zoomIn' enum value", "Scale transformation", "Attention-grabbing effect"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-004",
      "given": "a component with entrance delay '500ms'",
      "when": "page loads",
      "then": "it should wait 500ms before starting the entrance animation",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeIn", "delay": "500ms"}}},
        "timeline": "Page load → Wait 500ms → fadeIn animation",
        "assertions": ["delay: '500ms' (pattern: ^[0-9]+(ms|s)$)", "Default: 0ms", "Choreographed sequences"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-005",
      "given": "a component with entrance duration '1000ms'",
      "when": "animation starts",
      "then": "it should complete the entrance animation in 1 second",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeIn", "duration": "1000ms"}}},
        "behavior": "Slower animation: 1000ms (vs default 600ms)",
        "assertions": ["duration: '1000ms'", "Default: 600ms", "Control animation speed"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-006",
      "given": "multiple sibling components with stagger '100ms'",
      "when": "page loads",
      "then": "each component should animate 100ms after the previous sibling",
      "application": {
        "components": [
          {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp", "stagger": "100ms"}}},
          {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp", "stagger": "100ms"}}},
          {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp", "stagger": "100ms"}}}
        ],
        "timeline": ["Item 1: 0ms", "Item 2: 100ms", "Item 3: 200ms"],
        "assertions": ["stagger: '100ms' per sibling", "Cascading animation effect", "Used for: lists, grids"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-007",
      "given": "a component with delay '200ms' and stagger '50ms'",
      "when": "page loads",
      "then": "it should wait 200ms base delay plus 50ms per sibling index before animating",
      "application": {
        "components": [
          {"type": "div", "interactions": {"entrance": {"animation": "fadeIn", "delay": "200ms", "stagger": "50ms"}}},
          {"type": "div", "interactions": {"entrance": {"animation": "fadeIn", "delay": "200ms", "stagger": "50ms"}}},
          {"type": "div", "interactions": {"entrance": {"animation": "fadeIn", "delay": "200ms", "stagger": "50ms"}}}
        ],
        "timeline": ["Item 1: 200ms (base delay)", "Item 2: 250ms (200ms + 50ms)", "Item 3: 300ms (200ms + 100ms)"],
        "assertions": ["Combined: delay + stagger", "delay = base, stagger = incremental", "Complex choreography"]
      }
    },
    {
      "id": "APP-INTERACTION-ENTRANCE-008",
      "given": "a component with animation, delay, and duration all configured",
      "when": "page loads",
      "then": "it should wait the delay period then animate for the specified duration",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp", "delay": "300ms", "duration": "800ms"}}},
        "timeline": ["Page load → Wait 300ms → fadeInUp animation (800ms duration) → Complete"],
        "totalTime": "1100ms (300ms delay + 800ms duration)",
        "assertions": ["All properties: animation + delay + duration", "Full control over timing", "Complete configuration"]
      }
    },
    {
      "id": "APP-PAGES-INTERACTIONS-ENTRANCE-ANIMATION-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full entrance animation workflow"
    }
  ]
}
