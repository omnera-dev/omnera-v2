{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "interactions.schema.json",
  "title": "Component Interactions",
  "description": "Interactive behaviors triggered by user actions or page events",
  "type": "object",
  "properties": {
    "hover": {
      "$ref": "./hover-interaction.schema.json"
    },
    "click": {
      "$ref": "./click-interaction.schema.json"
    },
    "scroll": {
      "$ref": "./scroll-interaction.schema.json"
    },
    "entrance": {
      "$ref": "./entrance-animation.schema.json"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "hover": {
        "transform": "scale(1.05)",
        "duration": "200ms",
        "easing": "ease-out"
      },
      "click": {
        "animation": "pulse",
        "navigate": "/contact"
      },
      "entrance": {
        "animation": "fadeInUp",
        "delay": "100ms"
      }
    }
  ],
  "x-specs": [
    {
      "id": "APP-INTERACTION-MAIN-001",
      "given": "a component with only hover interactions",
      "when": "component is configured",
      "then": "it should support hover effects without other interaction types",
      "application": {
        "component": {"type": "button", "interactions": {"hover": {"transform": "scale(1.05)", "duration": "200ms"}}},
        "assertions": ["Only hover configured", "Other interactions optional"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-002",
      "given": "a component with only click interactions",
      "when": "component is configured",
      "then": "it should support click actions without other interaction types",
      "application": {
        "component": {"type": "button", "interactions": {"click": {"navigate": "/contact"}}},
        "assertions": ["Only click configured", "Navigate on click"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-003",
      "given": "a component with only scroll interactions",
      "when": "component is configured",
      "then": "it should support scroll animations without other interaction types",
      "application": {
        "component": {"type": "div", "interactions": {"scroll": {"animation": "fadeIn", "threshold": 0.5}}},
        "assertions": ["Only scroll configured", "Triggers on viewport entry"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-004",
      "given": "a component with only entrance interactions",
      "when": "component is configured",
      "then": "it should support entrance animations without other interaction types",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp", "delay": "100ms"}}},
        "assertions": ["Only entrance configured", "Plays on page load"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-005",
      "given": "a button with hover and click interactions",
      "when": "component is configured",
      "then": "it should support both hover effects and click actions",
      "application": {
        "component": {"type": "button", "interactions": {"hover": {"transform": "scale(1.05)"}, "click": {"navigate": "/contact"}}},
        "assertions": ["Hover + click combined", "Two interaction types on one component"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-006",
      "given": "a component with entrance and scroll interactions",
      "when": "page loads and user scrolls",
      "then": "it should play entrance animation on load and scroll animation on viewport entry",
      "application": {
        "component": {"type": "div", "interactions": {"entrance": {"animation": "fadeInUp"}, "scroll": {"animation": "slideIn"}}},
        "assertions": ["Entrance on load", "Scroll on viewport entry", "Independent triggers"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-007",
      "given": "a component with all four interaction types (hover, click, scroll, entrance)",
      "when": "component is fully interactive",
      "then": "all interactions should work independently and not interfere with each other",
      "application": {
        "component": {"type": "button", "interactions": {"hover": {"transform": "scale(1.05)"}, "click": {"animation": "pulse"}, "scroll": {"animation": "fadeIn"}, "entrance": {"animation": "fadeInUp"}}},
        "assertions": ["All 4 types: hover + click + scroll + entrance", "Independent triggers", "No interference"]
      }
    },
    {
      "id": "APP-INTERACTION-MAIN-008",
      "given": "a button with hover transform and click navigation",
      "when": "user hovers then clicks",
      "then": "hover effect should apply immediately and click should navigate after animation",
      "application": {
        "component": {"type": "button", "interactions": {"hover": {"transform": "scale(1.05)", "duration": "200ms"}, "click": {"navigate": "/contact", "animation": "pulse"}}},
        "sequence": ["1. Hover → scale(1.05) immediate", "2. Click → pulse animation", "3. Navigate → /contact after animation"],
        "assertions": ["Hover first, then click", "Sequential interactions"]
      }
    },
    {
      "id": "APP-PAGES-INTERACTIONS-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full interactions workflow"
    }
  ]
}
