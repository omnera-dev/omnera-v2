{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "click-interaction.schema.json",
  "title": "Click Interaction",
  "description": "Actions triggered when component is clicked",
  "type": "object",
  "properties": {
    "animation": {
      "type": "string",
      "description": "Animation to trigger",
      "enum": ["pulse", "bounce", "shake", "flash", "ripple", "none"]
    },
    "navigate": {
      "type": "string",
      "description": "Path to navigate to",
      "examples": ["/contact", "/pricing", "#section-id"]
    },
    "openUrl": {
      "type": "string",
      "format": "uri",
      "description": "External URL to open"
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false,
      "description": "Open link in new tab"
    },
    "scrollTo": {
      "type": "string",
      "description": "Element ID to scroll to",
      "pattern": "^#[a-zA-Z][a-zA-Z0-9-]*$"
    },
    "toggleElement": {
      "type": "string",
      "description": "Element ID to show/hide",
      "pattern": "^#[a-zA-Z][a-zA-Z0-9-]*$"
    },
    "submitForm": {
      "type": "string",
      "description": "Form ID to submit",
      "pattern": "^#[a-zA-Z][a-zA-Z0-9-]*$"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "animation": "pulse",
      "navigate": "/contact"
    },
    {
      "animation": "ripple",
      "scrollTo": "#pricing-section"
    },
    {
      "openUrl": "https://example.com",
      "openInNewTab": true
    }
  ],
  "x-specs": [
    {
      "id": "APP-PAGES-INTERACTION-CLICK-001",
      "given": "a button with click animation 'pulse'",
      "when": "user clicks the button",
      "then": "it should play a pulse animation",
      "application": {
        "component": { "type": "button", "interactions": { "click": { "animation": "pulse" } } },
        "behavior": "Click → pulse animation (scale + opacity effect)",
        "assertions": [
          "animation: 'pulse' enum value",
          "Visual feedback on click",
          "CSS animation or JS-driven"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-002",
      "given": "a button with click animation 'ripple'",
      "when": "user clicks the button",
      "then": "it should play a ripple animation from the click point",
      "application": {
        "component": { "type": "button", "interactions": { "click": { "animation": "ripple" } } },
        "behavior": "Click → ripple animation originates from click coordinates (Material Design style)",
        "assertions": [
          "animation: 'ripple' enum value",
          "Origin point: click coordinates",
          "Material Design pattern"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-003",
      "given": "a button with navigate to '/contact'",
      "when": "user clicks the button",
      "then": "it should navigate to the contact page",
      "application": {
        "component": { "type": "button", "interactions": { "click": { "navigate": "/contact" } } },
        "behavior": "Click → Navigate to /contact (internal routing)",
        "assertions": [
          "navigate: '/contact' (internal path)",
          "SPA routing (no page reload)",
          "URL changes to /contact"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-004",
      "given": "a button with navigate to anchor '#pricing-section'",
      "when": "user clicks the button",
      "then": "it should navigate to the pricing section on the same page",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "navigate": "#pricing-section" } }
        },
        "behavior": "Click → Scroll to #pricing-section anchor on same page",
        "assertions": [
          "navigate: '#pricing-section' (anchor link)",
          "Smooth scroll to element",
          "No route change"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-005",
      "given": "a button with openUrl to external site",
      "when": "user clicks the button",
      "then": "it should open the URL in the same tab",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "openUrl": "https://example.com" } }
        },
        "behavior": "Click → Opens https://example.com in same tab (default: openInNewTab = false)",
        "assertions": [
          "openUrl: External URL",
          "Same tab navigation",
          "Full page load (not SPA routing)"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-006",
      "given": "a button with openUrl and openInNewTab true",
      "when": "user clicks the button",
      "then": "it should open the URL in a new tab",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "openUrl": "https://example.com", "openInNewTab": true } }
        },
        "behavior": "Click → Opens https://example.com in new tab (target='_blank')",
        "assertions": ["openUrl + openInNewTab: true", "New tab/window", "Preserves current page"]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-007",
      "given": "a button with scrollTo '#hero-section'",
      "when": "user clicks the button",
      "then": "it should smoothly scroll to the hero section",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "scrollTo": "#hero-section" } }
        },
        "behavior": "Click → Smooth scroll to element with id='hero-section'",
        "assertions": [
          "scrollTo: '#hero-section' (pattern: ^#[a-zA-Z][a-zA-Z0-9-]*$)",
          "Smooth scroll behavior",
          "Element must exist"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-008",
      "given": "a button with toggleElement '#mobile-menu'",
      "when": "user clicks the button",
      "then": "it should show the mobile menu if hidden, or hide it if shown",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "toggleElement": "#mobile-menu" } }
        },
        "behavior": "Click → Toggle visibility of element with id='mobile-menu' (show ↔ hide)",
        "assertions": [
          "toggleElement: '#mobile-menu'",
          "Toggle display/visibility",
          "Hamburger menu pattern"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-009",
      "given": "a button with submitForm '#contact-form'",
      "when": "user clicks the button",
      "then": "it should submit the contact form",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "submitForm": "#contact-form" } }
        },
        "behavior": "Click → Programmatically submit form with id='contact-form'",
        "assertions": [
          "submitForm: '#contact-form'",
          "Triggers form submission",
          "Alternative to <input type='submit'>"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-010",
      "given": "a button with animation 'pulse' and navigate '/signup'",
      "when": "user clicks the button",
      "then": "it should play pulse animation then navigate to signup page",
      "application": {
        "component": {
          "type": "button",
          "interactions": { "click": { "animation": "pulse", "navigate": "/signup" } }
        },
        "sequence": [
          "1. Click",
          "2. Pulse animation plays",
          "3. Navigation to /signup after animation completes"
        ],
        "assertions": [
          "Combined: animation + navigate",
          "Sequential execution",
          "Visual feedback before navigation"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-011",
      "given": "a button with animation 'bounce'",
      "when": "user clicks the button",
      "then": "it should play a bounce animation",
      "application": {
        "component": { "type": "button", "interactions": { "click": { "animation": "bounce" } } },
        "behavior": "Click → bounce animation (vertical movement effect)",
        "assertions": ["animation: 'bounce' enum value", "Vertical animation", "Playful feedback"]
      }
    },
    {
      "id": "APP-PAGES-INTERACTION-CLICK-012",
      "given": "a button with animation 'none'",
      "when": "user clicks the button",
      "then": "it should not play any animation",
      "application": {
        "component": { "type": "button", "interactions": { "click": { "animation": "none" } } },
        "behavior": "Click → No animation (explicit opt-out)",
        "assertions": [
          "animation: 'none' enum value",
          "Disables default animations",
          "Minimal UI preference"
        ]
      }
    },
    {
      "id": "APP-PAGES-INTERACTIONS-CLICK-INTERACTION-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full click interaction workflow"
    }
  ]
}
