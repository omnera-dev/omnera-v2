{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "breadcrumb.schema.json",
  "title": "Breadcrumb Schema",
  "description": "Schema.org BreadcrumbList structured data",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org"
    },
    "@type": {
      "type": "string",
      "const": "BreadcrumbList"
    },
    "itemListElement": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "const": "ListItem"
          },
          "position": {
            "type": "integer",
            "minimum": 1
          },
          "name": {
            "type": "string"
          },
          "item": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["@type", "position", "name"]
      }
    }
  },
  "required": ["@context", "@type", "itemListElement"],
  "additionalProperties": false,
  "examples": [
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://example.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Products",
          "item": "https://example.com/products"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "Widget",
          "item": "https://example.com/products/widget"
        }
      ]
    }
  ],
  "x-specs": [
    {
      "id": "APP-PAGES-BREADCRUMB-001",
      "given": "BreadcrumbList with required properties",
      "when": "@context is 'https://schema.org', @type is 'BreadcrumbList', and itemListElement is provided",
      "then": "it should validate minimal BreadcrumbList structured data",
      "application": {
        "breadcrumb": {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home"
            }
          ]
        },
        "assertions": [
          "@context: 'https://schema.org' (required)",
          "@type: 'BreadcrumbList' (required)",
          "itemListElement: Array of ListItem (required)",
          "Minimal valid BreadcrumbList"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-002",
      "given": "BreadcrumbList with itemListElement array",
      "when": "itemListElement is array of ListItem objects",
      "then": "it should define navigation path",
      "application": {
        "breadcrumb": {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://example.com" },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Products",
              "item": "https://example.com/products"
            }
          ]
        },
        "assertions": [
          "itemListElement: Array of ListItem objects",
          "Each ListItem: @type, position, name, item",
          "Represents navigation path (Home > Products)"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-003",
      "given": "BreadcrumbList with ListItem",
      "when": "each item has @type 'ListItem', position, name",
      "then": "it should define breadcrumb item structure",
      "application": {
        "listItem": {
          "@type": "ListItem",
          "position": 2,
          "name": "Electronics",
          "item": "https://example.com/electronics"
        },
        "assertions": [
          "@type: 'ListItem' (required)",
          "position: Integer (required)",
          "name: Display label (required)",
          "item: URL (optional for last item)"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-004",
      "given": "BreadcrumbList with position",
      "when": "position is integer starting from 1",
      "then": "it should order breadcrumb trail",
      "application": {
        "breadcrumb": {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home" },
            { "@type": "ListItem", "position": 2, "name": "Blog" },
            { "@type": "ListItem", "position": 3, "name": "2025" },
            { "@type": "ListItem", "position": 4, "name": "Article Title" }
          ]
        },
        "assertions": [
          "position: Integer starting from 1",
          "Sequential ordering (1, 2, 3, 4)",
          "Defines breadcrumb hierarchy"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-005",
      "given": "BreadcrumbList with name",
      "when": "name is 'Home', 'Products', 'Widget'",
      "then": "it should provide human-readable breadcrumb label",
      "application": {
        "examples": [
          { "position": 1, "name": "Home" },
          { "position": 2, "name": "Electronics" },
          { "position": 3, "name": "Laptops" },
          { "position": 4, "name": "MacBook Pro 16-inch" }
        ],
        "assertions": [
          "name: Human-readable label (required)",
          "Displayed in breadcrumb UI",
          "Keep concise (1-3 words ideal)"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-006",
      "given": "BreadcrumbList with item URL",
      "when": "item is URL to breadcrumb page",
      "then": "it should provide clickable breadcrumb link",
      "application": {
        "breadcrumb": {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://example.com" },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Products",
              "item": "https://example.com/products"
            },
            { "@type": "ListItem", "position": 3, "name": "Widget" }
          ]
        },
        "note": "Last item (current page) typically omits 'item' URL",
        "assertions": [
          "item: URL to breadcrumb page (optional)",
          "Omit for last item (current page)",
          "Makes breadcrumbs clickable in UI"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-007",
      "given": "BreadcrumbList with multiple levels",
      "when": "itemListElement has 3+ items (Home > Products > Widget)",
      "then": "it should represent multi-level navigation path",
      "application": {
        "deepBreadcrumb": {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://example.com" },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Electronics",
              "item": "https://example.com/electronics"
            },
            {
              "@type": "ListItem",
              "position": 3,
              "name": "Laptops",
              "item": "https://example.com/electronics/laptops"
            },
            {
              "@type": "ListItem",
              "position": 4,
              "name": "Gaming Laptops",
              "item": "https://example.com/electronics/laptops/gaming"
            },
            { "@type": "ListItem", "position": 5, "name": "ASUS ROG Strix" }
          ]
        },
        "assertions": [
          "Multi-level navigation (5 levels deep)",
          "Shows complete path from home to product",
          "Each level represents category hierarchy"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-008",
      "given": "BreadcrumbList for site hierarchy",
      "when": "breadcrumb reflects site structure",
      "then": "it should help search engines understand site architecture",
      "application": {
        "siteStructure": {
          "Home": "Top-level (position: 1)",
          "Category": "Second-level (position: 2)",
          "Subcategory": "Third-level (position: 3)",
          "Product": "Fourth-level (position: 4)"
        },
        "seoBenefit": "Google understands site hierarchy and category relationships",
        "assertions": [
          "Reflects site information architecture",
          "Helps search engines understand content organization",
          "Improves category page SEO"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-009",
      "given": "BreadcrumbList for rich results",
      "when": "BreadcrumbList structured data is included in page metadata",
      "then": "it should display breadcrumb trail in Google search results",
      "application": {
        "richResult": {
          "searchResultDisplay": "example.com > Electronics > Laptops > Gaming Laptops",
          "replacesURL": "Breadcrumb trail replaces URL in search snippet",
          "benefit": "More context, higher click-through rate (CTR)"
        },
        "example": {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home",
              "item": "https://shop.example.com"
            },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Men's Fashion",
              "item": "https://shop.example.com/mens"
            },
            { "@type": "ListItem", "position": 3, "name": "Shoes" }
          ]
        },
        "assertions": [
          "Displays in Google search results (above page title)",
          "Replaces URL with breadcrumb trail",
          "Improves CTR with better context"
        ]
      }
    },
    {
      "id": "APP-PAGES-BREADCRUMB-010",
      "given": "BreadcrumbList for navigation UX",
      "when": "breadcrumb shows user's location in site",
      "then": "it should improve navigation and reduce bounce rate",
      "application": {
        "uxBenefits": {
          "Orientation": "Users know where they are in site hierarchy",
          "Navigation": "Easy to backtrack to parent categories",
          "Reduced bounce": "Users explore more pages instead of leaving"
        },
        "metrics": {
          "Bounce rate": "Typically 10-20% lower with breadcrumbs",
          "Pages per session": "15-25% higher with breadcrumbs",
          "Time on site": "Increased engagement"
        },
        "assertions": [
          "Shows user's location in site hierarchy",
          "Enables easy navigation to parent pages",
          "Reduces bounce rate, improves engagement",
          "Best practice for e-commerce, blogs, documentation"
        ]
      }
    },
    {
      "id": "APP-PAGES-META-STRUCTURED-DATA-BREADCRUMB-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full Breadcrumb workflow",
      "workflow": [
        {
          "step": 1,
          "action": "User defines BreadcrumbList based on page URL path and site hierarchy",
          "validation": "itemListElement array contains sequential ListItem objects with positions 1, 2, 3, 4...",
          "expectedState": "Complete breadcrumb trail from Home to current page with proper position ordering"
        },
        {
          "step": 2,
          "action": "System generates JSON-LD script from BreadcrumbList schema",
          "validation": "JSON-LD validates against Schema.org BreadcrumbList specification",
          "expectedState": "Valid JSON-LD structured data embedded in page head"
        },
        {
          "step": 3,
          "action": "System validates structured data with Google Rich Results Test",
          "validation": "Google Rich Results Test passes with no errors or warnings",
          "expectedState": "Breadcrumb trail eligible for SERP display replacing URL"
        },
        {
          "step": 4,
          "action": "User searches for page on Google",
          "validation": "Breadcrumb trail displays in search results above page title (e.g., Home > Electronics > Laptops)",
          "expectedState": "Breadcrumb replaces URL in search snippet, showing site hierarchy"
        },
        {
          "step": 5,
          "action": "User navigates site and views breadcrumb UI on page",
          "validation": "Breadcrumb navigation displays on page with clickable links to parent pages",
          "expectedState": "Users can navigate back through site hierarchy via breadcrumb links"
        }
      ],
      "application": {
        "completeExample": {
          "page": {
            "url": "https://shop.example.com/electronics/laptops/gaming/asus-rog-strix",
            "meta": {
              "schema": {
                "@context": "https://schema.org",
                "@type": "BreadcrumbList",
                "itemListElement": [
                  {
                    "@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": "https://shop.example.com"
                  },
                  {
                    "@type": "ListItem",
                    "position": 2,
                    "name": "Electronics",
                    "item": "https://shop.example.com/electronics"
                  },
                  {
                    "@type": "ListItem",
                    "position": 3,
                    "name": "Laptops",
                    "item": "https://shop.example.com/electronics/laptops"
                  },
                  {
                    "@type": "ListItem",
                    "position": 4,
                    "name": "Gaming Laptops",
                    "item": "https://shop.example.com/electronics/laptops/gaming"
                  },
                  {
                    "@type": "ListItem",
                    "position": 5,
                    "name": "ASUS ROG Strix"
                  }
                ]
              }
            }
          }
        },
        "expectedMeta": "{\"@context\":\"https://schema.org\",\"@type\":\"BreadcrumbList\",\"itemListElement\":[{\"@type\":\"ListItem\",\"position\":1,\"name\":\"Home\",\"item\":\"https://shop.example.com\"},{\"@type\":\"ListItem\",\"position\":2,\"name\":\"Electronics\",\"item\":\"https://shop.example.com/electronics\"},{\"@type\":\"ListItem\",\"position\":3,\"name\":\"Laptops\",\"item\":\"https://shop.example.com/electronics/laptops\"},{\"@type\":\"ListItem\",\"position\":4,\"name\":\"Gaming Laptops\",\"item\":\"https://shop.example.com/electronics/laptops/gaming\"},{\"@type\":\"ListItem\",\"position\":5,\"name\":\"ASUS ROG Strix\"}]}",
        "expectedDOM": "<head>\n  <script type=\"application/ld+json\">\n    {\n      \"@context\": \"https://schema.org\",\n      \"@type\": \"BreadcrumbList\",\n      \"itemListElement\": [\n        {\n          \"@type\": \"ListItem\",\n          \"position\": 1,\n          \"name\": \"Home\",\n          \"item\": \"https://shop.example.com\"\n        },\n        {\n          \"@type\": \"ListItem\",\n          \"position\": 2,\n          \"name\": \"Electronics\",\n          \"item\": \"https://shop.example.com/electronics\"\n        },\n        {\n          \"@type\": \"ListItem\",\n          \"position\": 3,\n          \"name\": \"Laptops\",\n          \"item\": \"https://shop.example.com/electronics/laptops\"\n        },\n        {\n          \"@type\": \"ListItem\",\n          \"position\": 4,\n          \"name\": \"Gaming Laptops\",\n          \"item\": \"https://shop.example.com/electronics/laptops/gaming\"\n        },\n        {\n          \"@type\": \"ListItem\",\n          \"position\": 5,\n          \"name\": \"ASUS ROG Strix\"\n        }\n      ]\n    }\n  </script>\n</head>\n<nav aria-label=\"breadcrumb\">\n  <ol>\n    <li><a href=\"https://shop.example.com\">Home</a></li>\n    <li><a href=\"https://shop.example.com/electronics\">Electronics</a></li>\n    <li><a href=\"https://shop.example.com/electronics/laptops\">Laptops</a></li>\n    <li><a href=\"https://shop.example.com/electronics/laptops/gaming\">Gaming Laptops</a></li>\n    <li aria-current=\"page\">ASUS ROG Strix</li>\n  </ol>\n</nav>",
        "assertions": [
          "BreadcrumbList structured data validates against Schema.org specification",
          "Google Rich Results Test passes with no errors",
          "Breadcrumb trail displays in Google search results above page title",
          "Breadcrumb replaces URL in search snippet (Home > Electronics > Laptops > Gaming Laptops)",
          "Sequential position ordering (1, 2, 3, 4, 5) maintained",
          "Each ListItem has required @type, position, and name",
          "All parent items (positions 1-4) include 'item' URL for clickability",
          "Current page (position 5) omits 'item' URL as it's the active page",
          "Breadcrumb navigation renders on page with clickable links",
          "Last breadcrumb item (current page) is non-clickable with aria-current=\"page\"",
          "Breadcrumb improves CTR by providing better context in search results",
          "Site hierarchy visible to search engines for improved category SEO"
        ]
      },
      "integrationPoints": [
        "Page URL structure integration (breadcrumb reflects URL path hierarchy)",
        "Site navigation integration (breadcrumb matches main navigation categories)",
        "SEO integration (breadcrumb improves search rankings for category pages)",
        "SERP display integration (breadcrumb replaces URL in Google search results)",
        "Accessibility integration (aria-label and aria-current for screen readers)",
        "User experience integration (breadcrumb reduces bounce rate by 10-20%)",
        "Analytics integration (track breadcrumb clicks to understand navigation patterns)",
        "Mobile responsiveness (breadcrumb adapts to small screens with truncation or scrolling)",
        "Schema.org validator compliance (validates at https://validator.schema.org)",
        "Google Rich Results Test compliance (validates at https://search.google.com/test/rich-results)"
      ]
    }
  ]
}
