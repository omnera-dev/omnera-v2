{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "organization.schema.json",
  "title": "Organization Schema",
  "description": "Schema.org Organization structured data",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "Schema.org context"
    },
    "@type": {
      "type": "string",
      "const": "Organization",
      "description": "Schema.org type"
    },
    "name": {
      "type": "string",
      "description": "Organization name"
    },
    "description": {
      "type": "string",
      "description": "Organization description"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Organization website URL"
    },
    "logo": {
      "type": "string",
      "format": "uri",
      "description": "Organization logo URL"
    },
    "image": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      ],
      "description": "Organization image(s)"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Contact email"
    },
    "telephone": {
      "type": "string",
      "description": "Contact phone number"
    },
    "address": {
      "$ref": "./postal-address.schema.json"
    },
    "sameAs": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "Social media profile URLs",
      "examples": [["https://facebook.com/myorg", "https://twitter.com/myorg"]]
    },
    "founder": {
      "type": "string",
      "description": "Organization founder name"
    },
    "foundingDate": {
      "type": "string",
      "format": "date",
      "description": "Date organization was founded"
    },
    "employees": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of employees"
    },
    "event": {
      "$ref": "./education-event.schema.json"
    }
  },
  "required": ["@context", "@type", "name"],
  "additionalProperties": false,
  "x-specs": [
    {
      "id": "APP-PAGES-ORGANIZATION-001",
      "given": "Organization with required properties",
      "when": "@context is 'https://schema.org', @type is 'Organization', and name is provided",
      "then": "it should validate minimal Organization structured data",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Acme Corporation"
        },
        "assertions": [
          "@context: 'https://schema.org' (required)",
          "@type: 'Organization' (required)",
          "name: Organization name (required)",
          "Minimal valid Organization"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-002",
      "given": "Organization with @context",
      "when": "@context is 'https://schema.org' (const)",
      "then": "it should specify Schema.org vocabulary",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Tech Innovations Inc"
        },
        "assertions": [
          "@context: 'https://schema.org' (const, required)",
          "Specifies Schema.org vocabulary for structured data",
          "Same for all Schema.org types"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-003",
      "given": "Organization with @type",
      "when": "@type is 'Organization' (const)",
      "then": "it should identify entity as Organization",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Global Enterprises"
        },
        "assertions": [
          "@type: 'Organization' (const, required)",
          "Identifies entity as organization (not Person, LocalBusiness, etc.)",
          "Use for: Companies, nonprofits, educational institutions"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-004",
      "given": "Organization with name",
      "when": "name is 'My Company'",
      "then": "it should provide organization name",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Sustainable Solutions LLC"
        },
        "assertions": [
          "name: Official organization name (required)",
          "Displayed in Google Knowledge Panel",
          "Should match legal/registered business name"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-005",
      "given": "Organization with url",
      "when": "url is 'https://example.com'",
      "then": "it should provide organization website URL",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Digital Marketing Agency",
          "url": "https://digitalmarketing.example.com"
        },
        "assertions": [
          "url: Organization website (recommended)",
          "Official homepage URL",
          "Displayed in Knowledge Panel with 'Visit website' link"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-006",
      "given": "Organization with logo",
      "when": "logo is URL to organization logo",
      "then": "it should provide logo for search results",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Creative Studios",
          "logo": "https://creativestudios.example.com/logo.png"
        },
        "assertions": [
          "logo: Organization logo URL (recommended)",
          "Square logo works best (1:1 aspect ratio)",
          "Minimum: 112x112px, Recommended: 600x600px",
          "Displayed in Knowledge Panel and search results"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-007",
      "given": "Organization with image",
      "when": "image is string URL or array of URLs",
      "then": "it should support single or multiple organization images",
      "application": {
        "singleImage": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Mountain Adventures",
          "image": "https://mountainadventures.example.com/office.jpg"
        },
        "multipleImages": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Mountain Adventures",
          "image": [
            "https://mountainadventures.example.com/office.jpg",
            "https://mountainadventures.example.com/team.jpg",
            "https://mountainadventures.example.com/headquarters.jpg"
          ]
        },
        "assertions": [
          "image: String URL or array of URLs",
          "Multiple images: Office, team, products, facilities",
          "Displayed in Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-008",
      "given": "Organization with contact info",
      "when": "email and telephone are provided",
      "then": "it should provide contact information",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Customer Support Corp",
          "email": "contact@customersupport.example.com",
          "telephone": "+1-800-555-0123"
        },
        "assertions": [
          "email: Contact email (optional)",
          "telephone: Phone with country code (recommended)",
          "Displayed in Knowledge Panel for easy contact"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-009",
      "given": "Organization with address",
      "when": "address references postal-address.schema.json",
      "then": "it should include PostalAddress structured data",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Headquarters Inc",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "100 Corporate Drive",
            "addressLocality": "New York",
            "addressRegion": "NY",
            "postalCode": "10001",
            "addressCountry": "US"
          }
        },
        "assertions": [
          "address: PostalAddress object (optional)",
          "References postal-address.schema.json",
          "Displayed in Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-010",
      "given": "Organization with social profiles",
      "when": "sameAs is array of social media URLs (Facebook, Twitter, LinkedIn)",
      "then": "it should link organization to social profiles",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Social Media Corp",
          "sameAs": [
            "https://www.facebook.com/socialmedia",
            "https://twitter.com/socialmedia",
            "https://www.linkedin.com/company/socialmedia",
            "https://www.youtube.com/socialmedia"
          ]
        },
        "assertions": [
          "sameAs: Array of social profile URLs (optional)",
          "Helps Google verify organization identity",
          "Displayed in Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-011",
      "given": "Organization with founder info",
      "when": "founder name and foundingDate are provided",
      "then": "it should provide organization history",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Startup Ventures",
          "founder": "Jane Entrepreneur",
          "foundingDate": "2010-06-15"
        },
        "assertions": [
          "founder: Founder name (optional)",
          "foundingDate: Date founded (YYYY-MM-DD format, optional)",
          "Displayed in Knowledge Panel (history section)"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-012",
      "given": "Organization with employees count",
      "when": "employees is integer minimum 1",
      "then": "it should indicate organization size",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Large Corporation",
          "employees": 5000
        },
        "ranges": {
          "Startup": "1-10",
          "Small": "11-50",
          "Medium": "51-250",
          "Large": "251-1000",
          "Enterprise": "1000+"
        },
        "assertions": [
          "employees: Integer (minimum: 1, optional)",
          "Indicates organization size",
          "Displayed in Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-013",
      "given": "Organization with event",
      "when": "event references education-event.schema.json",
      "then": "it should link organization to hosted events",
      "application": {
        "organization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Conference Center",
          "event": {
            "@type": "EducationEvent",
            "name": "Annual Tech Summit",
            "startDate": "2025-09-15T09:00:00Z"
          }
        },
        "assertions": [
          "event: EducationEvent object (optional)",
          "References education-event.schema.json",
          "Links organization to events it hosts/organizes"
        ]
      }
    },
    {
      "id": "APP-PAGES-ORGANIZATION-014",
      "given": "Organization for knowledge graph",
      "when": "complete organization data is provided",
      "then": "it should enable Google Knowledge Graph panel in search results",
      "application": {
        "completeOrganization": {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Innovative Tech Solutions",
          "description": "Leading provider of enterprise software solutions for Fortune 500 companies.",
          "url": "https://innovativetech.example.com",
          "logo": "https://innovativetech.example.com/logo.png",
          "image": [
            "https://innovativetech.example.com/headquarters.jpg",
            "https://innovativetech.example.com/team.jpg"
          ],
          "email": "info@innovativetech.example.com",
          "telephone": "+1-888-555-7890",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "500 Innovation Way",
            "addressLocality": "San Francisco",
            "addressRegion": "CA",
            "postalCode": "94105",
            "addressCountry": "US"
          },
          "sameAs": [
            "https://www.facebook.com/innovativetech",
            "https://twitter.com/innovativetech",
            "https://www.linkedin.com/company/innovative-tech"
          ],
          "founder": "John Innovator",
          "foundingDate": "2005-03-20",
          "employees": 2500
        },
        "knowledgePanel": {
          "Logo + Name": "Top of panel",
          "Description": "Organization overview",
          "Contact": "Phone, email, website",
          "Address": "Physical location",
          "Social": "Social media links",
          "History": "Founded date, founder"
        },
        "assertions": [
          "Complete Organization: All recommended properties",
          "Maximizes Knowledge Graph eligibility",
          "Best practice for companies, nonprofits, institutions"
        ]
      }
    },
    {
      "id": "APP-PAGES-META-STRUCTURED-DATA-ORGANIZATION-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full Organization workflow"
    }
  ]
}
