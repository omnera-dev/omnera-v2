{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "person.schema.json",
  "title": "Person Schema",
  "description": "Schema.org Person structured data",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org"
    },
    "@type": {
      "type": "string",
      "const": "Person"
    },
    "name": {
      "type": "string"
    },
    "givenName": {
      "type": "string"
    },
    "familyName": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "telephone": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "jobTitle": {
      "type": "string"
    },
    "worksFor": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "sameAs": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "address": {
      "$ref": "./postal-address.schema.json"
    }
  },
  "required": ["@context", "@type", "name"],
  "additionalProperties": false,
  "x-specs": [
    {
      "id": "APP-PAGES-PERSON-001",
      "given": "Person with required properties",
      "when": "@context is 'https://schema.org', @type is 'Person', and name is provided",
      "then": "it should validate minimal Person structured data",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Jane Smith"
        },
        "assertions": [
          "@context: 'https://schema.org' (required)",
          "@type: 'Person' (required)",
          "name: Full name (required)",
          "Minimal valid Person"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-002",
      "given": "Person with full name",
      "when": "name is 'John Doe'",
      "then": "it should provide person's full name",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Emily Rodriguez"
        },
        "assertions": [
          "name: Full name (required)",
          "Format: 'First Last' or 'First Middle Last'",
          "Displayed in search results and Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-003",
      "given": "Person with split name",
      "when": "givenName is 'John' and familyName is 'Doe'",
      "then": "it should provide structured first and last names",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Michael Chen",
          "givenName": "Michael",
          "familyName": "Chen"
        },
        "assertions": [
          "givenName: First name (optional)",
          "familyName: Last name (optional)",
          "Structured name components",
          "Useful for name-based sorting and formatting"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-004",
      "given": "Person with contact info",
      "when": "email and telephone are provided",
      "then": "it should provide person contact information",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Sarah Johnson",
          "email": "sarah.johnson@example.com",
          "telephone": "+1-555-234-5678"
        },
        "assertions": [
          "email: Contact email (optional)",
          "telephone: Phone with country code (optional)",
          "Displayed in Knowledge Panel for public figures"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-005",
      "given": "Person with url",
      "when": "url is person's website or profile",
      "then": "it should link to person's web presence",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "David Kim",
          "url": "https://davidkim.example.com"
        },
        "assertions": [
          "url: Personal website or profile (optional)",
          "Portfolio, blog, or professional site",
          "Displayed in Knowledge Panel with 'Website' link"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-006",
      "given": "Person with image",
      "when": "image is URL to person's photo",
      "then": "it should provide visual representation",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Lisa Anderson",
          "image": "https://lisaanderson.example.com/profile.jpg"
        },
        "assertions": [
          "image: Photo URL (optional)",
          "Professional headshot or profile photo",
          "Displayed in Knowledge Panel and rich results"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-007",
      "given": "Person with jobTitle",
      "when": "jobTitle is 'CEO' or 'Software Engineer'",
      "then": "it should indicate person's professional role",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Robert Taylor",
          "jobTitle": "Chief Technology Officer"
        },
        "examples": ["CEO", "Software Engineer", "Marketing Director", "Freelance Designer"],
        "assertions": [
          "jobTitle: Professional role (optional)",
          "Displayed in Knowledge Panel",
          "Use for: Business profiles, team pages, author bios"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-008",
      "given": "Person with worksFor",
      "when": "worksFor is object with @type 'Organization' and name",
      "then": "it should link person to their employer",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Amanda Martinez",
          "jobTitle": "Senior Software Engineer",
          "worksFor": {
            "@type": "Organization",
            "name": "Tech Innovations Inc"
          }
        },
        "assertions": [
          "worksFor: Organization object (optional)",
          "Links person to employer",
          "Displayed in Knowledge Panel (employment history)"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-009",
      "given": "Person with social profiles",
      "when": "sameAs is array of social media URLs",
      "then": "it should link person to their social profiles",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Chris Wilson",
          "sameAs": [
            "https://twitter.com/chriswilson",
            "https://www.linkedin.com/in/chriswilson",
            "https://github.com/chriswilson",
            "https://medium.com/@chriswilson"
          ]
        },
        "assertions": [
          "sameAs: Array of social profile URLs (optional)",
          "Twitter, LinkedIn, GitHub, Medium, etc.",
          "Helps Google verify identity",
          "Displayed in Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-010",
      "given": "Person with address",
      "when": "address references postal-address.schema.json",
      "then": "it should include PostalAddress structured data",
      "application": {
        "person": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Patricia Brown",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "789 Elm Street",
            "addressLocality": "Austin",
            "addressRegion": "TX",
            "postalCode": "78701",
            "addressCountry": "US"
          }
        },
        "assertions": [
          "address: PostalAddress object (optional)",
          "References postal-address.schema.json",
          "Use for: Business contact pages, public figures"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-011",
      "given": "Person for author attribution",
      "when": "Person is used in article.author",
      "then": "it should attribute content to specific author",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "10 Tips for Better Code Reviews",
          "author": {
            "@type": "Person",
            "name": "Alice Developer",
            "url": "https://alicedev.example.com",
            "jobTitle": "Senior Software Engineer"
          }
        },
        "assertions": [
          "Person as article.author (content attribution)",
          "Builds author authority in search",
          "Critical for E-A-T (Expertise, Authoritativeness, Trustworthiness)",
          "Displayed in article rich results"
        ]
      }
    },
    {
      "id": "APP-PAGES-PERSON-012",
      "given": "Person for knowledge graph",
      "when": "complete person data is provided",
      "then": "it should enable Google Knowledge Graph panel for notable persons",
      "application": {
        "completePerson": {
          "@context": "https://schema.org",
          "@type": "Person",
          "name": "Dr. Jennifer Martinez",
          "givenName": "Jennifer",
          "familyName": "Martinez",
          "email": "jennifer@example.com",
          "telephone": "+1-555-987-6543",
          "url": "https://jennifermartinez.example.com",
          "image": "https://jennifermartinez.example.com/photo.jpg",
          "jobTitle": "Chief Executive Officer",
          "worksFor": {
            "@type": "Organization",
            "name": "Global Health Solutions"
          },
          "sameAs": [
            "https://twitter.com/drjenniferm",
            "https://www.linkedin.com/in/jennifermartinez"
          ],
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Boston",
            "addressRegion": "MA",
            "addressCountry": "US"
          }
        },
        "knowledgePanel": {
          "Photo + Name": "Top of panel",
          "Job Title": "Professional role",
          "Organization": "Current employer",
          "Contact": "Email, phone, website",
          "Social": "Social media links"
        },
        "assertions": [
          "Complete Person: All recommended properties",
          "Maximizes Knowledge Graph eligibility",
          "Best practice for: Public figures, executives, authors, experts"
        ]
      }
    },
    {
      "id": "APP-PAGES-META-STRUCTURED-DATA-PERSON-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full Person workflow"
    }
  ]
}
