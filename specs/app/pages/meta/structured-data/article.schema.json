{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "article.schema.json",
  "title": "Article Schema",
  "description": "Schema.org Article structured data",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org"
    },
    "@type": {
      "type": "string",
      "enum": ["Article", "NewsArticle", "BlogPosting"],
      "default": "Article"
    },
    "headline": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "type": "array", "items": { "type": "string", "format": "uri" } }
      ]
    },
    "author": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "enum": ["Person", "Organization"]
            },
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      ]
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "dateModified": {
      "type": "string",
      "format": "date-time"
    },
    "publisher": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "name": {
          "type": "string"
        },
        "logo": {
          "type": "object",
          "properties": {
            "@type": {
              "const": "ImageObject"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      }
    },
    "mainEntityOfPage": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": ["@context", "@type", "headline"],
  "additionalProperties": false,
  "specs": []
}
