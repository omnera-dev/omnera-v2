{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "article.schema.json",
  "title": "Article Schema",
  "description": "Schema.org Article structured data",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org"
    },
    "@type": {
      "type": "string",
      "enum": ["Article", "NewsArticle", "BlogPosting"],
      "default": "Article"
    },
    "headline": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      ]
    },
    "author": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "enum": ["Person", "Organization"]
            },
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      ]
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "dateModified": {
      "type": "string",
      "format": "date-time"
    },
    "publisher": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "name": {
          "type": "string"
        },
        "logo": {
          "type": "object",
          "properties": {
            "@type": {
              "const": "ImageObject"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      }
    },
    "mainEntityOfPage": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": ["@context", "@type", "headline"],
  "additionalProperties": false,
  "x-specs": [
    {
      "id": "APP-PAGES-ARTICLE-001",
      "given": "Article with required properties",
      "when": "@context is 'https://schema.org', @type is 'Article', and headline is provided",
      "then": "it should validate minimal Article structured data",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "10 Tips for Better Sleep"
        },
        "expectedJSON-LD": "<script type=\"application/ld+json\">{\"@context\":\"https://schema.org\",\"@type\":\"Article\",\"headline\":\"10 Tips for Better Sleep\"}</script>",
        "assertions": [
          "@context: 'https://schema.org' (required)",
          "@type: 'Article' (required)",
          "headline: Article title (required)",
          "Minimal valid Article structured data"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-002",
      "given": "Article with @type enum",
      "when": "@type is 'Article', 'NewsArticle', or 'BlogPosting'",
      "then": "it should categorize content type",
      "application": {
        "types": {
          "Article": "General article (default)",
          "NewsArticle": "News article (time-sensitive, journalistic)",
          "BlogPosting": "Blog post (informal, personal/corporate blog)"
        },
        "example": {
          "@context": "https://schema.org",
          "@type": "BlogPosting",
          "headline": "My Journey Learning React"
        },
        "assertions": [
          "@type: Enum (Article, NewsArticle, BlogPosting)",
          "Categorizes content for search engines",
          "Choose based on content nature"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-003",
      "given": "Article with headline",
      "when": "headline is article title",
      "then": "it should provide article title for rich results",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "The Complete Guide to TypeScript in 2025"
        },
        "richResultDisplay": "Google shows headline in search results (article card)",
        "assertions": [
          "headline: Article title (required)",
          "Displayed in rich results",
          "Limit: 110 characters (best practice)"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-004",
      "given": "Article with description",
      "when": "description summarizes article content",
      "then": "it should provide article summary",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "TypeScript Guide",
          "description": "Learn TypeScript from basics to advanced concepts with practical examples."
        },
        "assertions": [
          "description: Article summary (optional)",
          "Displayed in rich results",
          "Best practice: 50-160 characters"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-005",
      "given": "Article with image",
      "when": "image is string URL or array of URLs",
      "then": "it should support single or multiple article images",
      "application": {
        "singleImage": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "image": "https://example.com/article-hero.jpg"
        },
        "multipleImages": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "image": [
            "https://example.com/hero.jpg",
            "https://example.com/thumb.jpg",
            "https://example.com/square.jpg"
          ]
        },
        "assertions": [
          "image: String URL or array of URLs",
          "Multiple images: Different aspect ratios (16x9, 4x3, 1x1)",
          "Best practice: At least 1200px wide",
          "Used in rich results (article card)"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-006",
      "given": "Article with author as string",
      "when": "author is 'John Doe'",
      "then": "it should provide simple author name",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "author": "Jane Smith"
        },
        "assertions": [
          "author: Simple string (name only)",
          "Quick setup for single author",
          "For structured author data, use object format"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-007",
      "given": "Article with author as Person object",
      "when": "author is object with @type 'Person', name, and url",
      "then": "it should provide structured author information",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "author": {
            "@type": "Person",
            "name": "Jane Smith",
            "url": "https://example.com/authors/jane-smith"
          }
        },
        "assertions": [
          "author: Person object with @type, name, url",
          "Structured author data (better SEO)",
          "Links to author profile page"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-008",
      "given": "Article with author as Organization",
      "when": "author is object with @type 'Organization' and name",
      "then": "it should attribute content to organization",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "NewsArticle",
          "headline": "Breaking: New Tech Announcement",
          "author": {
            "@type": "Organization",
            "name": "TechNews Corp",
            "url": "https://technews.example.com"
          }
        },
        "assertions": [
          "author: Organization object (company-authored content)",
          "Common for: News articles, corporate blogs",
          "Differentiates from individual authors"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-009",
      "given": "Article with datePublished",
      "when": "datePublished is ISO 8601 date-time",
      "then": "it should provide publication date",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "datePublished": "2025-01-15T09:00:00Z"
        },
        "assertions": [
          "datePublished: ISO 8601 date-time (required for rich results)",
          "Format: YYYY-MM-DDTHH:MM:SSZ",
          "Shows publication date in search results"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-010",
      "given": "Article with dateModified",
      "when": "dateModified is ISO 8601 date-time",
      "then": "it should indicate last update date",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "datePublished": "2025-01-15T09:00:00Z",
          "dateModified": "2025-01-20T14:30:00Z"
        },
        "assertions": [
          "dateModified: Last update timestamp (optional)",
          "Shows 'Updated' date in search results",
          "Signals content freshness to Google"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-011",
      "given": "Article with publisher",
      "when": "publisher is object with @type 'Organization', name, and logo (ImageObject)",
      "then": "it should identify publishing organization",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "publisher": {
            "@type": "Organization",
            "name": "Example Publishing",
            "logo": {
              "@type": "ImageObject",
              "url": "https://example.com/logo.png"
            }
          }
        },
        "assertions": [
          "publisher: Organization with name + logo (required for rich results)",
          "logo: ImageObject with url",
          "Logo displayed in Google News/search results"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-012",
      "given": "Article with mainEntityOfPage",
      "when": "mainEntityOfPage is canonical URL",
      "then": "it should specify article's primary page URL",
      "application": {
        "article": {
          "@context": "https://schema.org",
          "@type": "Article",
          "headline": "Article Title",
          "mainEntityOfPage": "https://example.com/articles/my-article"
        },
        "assertions": [
          "mainEntityOfPage: Canonical URL (optional)",
          "Specifies primary page for this content",
          "Useful for syndicated/cross-posted articles"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-013",
      "given": "Article for rich results",
      "when": "complete article data with author, dates, and publisher is provided",
      "then": "it should enable Google News and article rich results",
      "application": {
        "completeArticle": {
          "@context": "https://schema.org",
          "@type": "NewsArticle",
          "headline": "Breaking: AI Breakthrough Announced",
          "description": "Researchers unveil revolutionary AI model with unprecedented capabilities.",
          "image": ["https://example.com/hero.jpg", "https://example.com/thumb.jpg"],
          "author": {
            "@type": "Person",
            "name": "Jane Smith",
            "url": "https://example.com/authors/jane-smith"
          },
          "datePublished": "2025-01-15T09:00:00Z",
          "dateModified": "2025-01-15T14:30:00Z",
          "publisher": {
            "@type": "Organization",
            "name": "Tech News Daily",
            "logo": {
              "@type": "ImageObject",
              "url": "https://example.com/logo.png"
            }
          },
          "mainEntityOfPage": "https://example.com/news/ai-breakthrough"
        },
        "richResults": {
          "GoogleNews": "Article card with headline, image, author, date",
          "SearchResults": "Enhanced snippet with thumbnail, publication date",
          "AMP": "AMP article carousel eligibility"
        },
        "assertions": [
          "Complete Article: All recommended properties",
          "Maximizes rich result eligibility",
          "Best practice for news/blog content"
        ]
      }
    },
    {
      "id": "APP-PAGES-ARTICLE-014",
      "given": "Article for content attribution",
      "when": "Article structured data is included in blog posts",
      "then": "it should properly attribute content to authors and publishers",
      "application": {
        "blogPost": {
          "@context": "https://schema.org",
          "@type": "BlogPosting",
          "headline": "How I Built My First SaaS Product",
          "author": {
            "@type": "Person",
            "name": "John Developer",
            "url": "https://blog.example.com/author/john"
          },
          "publisher": {
            "@type": "Organization",
            "name": "Developer Blog",
            "logo": {
              "@type": "ImageObject",
              "url": "https://blog.example.com/logo.png"
            }
          },
          "datePublished": "2025-01-10T10:00:00Z"
        },
        "benefits": {
          "Attribution": "Clear author/publisher credit in search results",
          "Trust": "Verified authorship improves credibility",
          "Discovery": "Author pages can aggregate all articles"
        },
        "assertions": [
          "Proper content attribution (author + publisher)",
          "Builds author authority in search",
          "Critical for E-A-T (Expertise, Authoritativeness, Trustworthiness)"
        ]
      }
    },
    {
      "id": "APP-PAGES-META-STRUCTURED-DATA-ARTICLE-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full Article workflow"
    }
  ]
}
