{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "structured-data.schema.json",
  "title": "Structured Data",
  "description": "Schema.org structured data for search engine understanding",
  "type": "object",
  "properties": {
    "organization": {
      "$ref": "./organization.schema.json"
    },
    "faqPage": {
      "$ref": "./faq-page.schema.json"
    },
    "localBusiness": {
      "$ref": "./local-business.schema.json"
    },
    "educationEvent": {
      "$ref": "./education-event.schema.json"
    },
    "breadcrumb": {
      "$ref": "./breadcrumb.schema.json"
    },
    "product": {
      "$ref": "./product.schema.json"
    },
    "article": {
      "$ref": "./article.schema.json"
    },
    "person": {
      "$ref": "./person.schema.json"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "organization": {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "My Company",
        "url": "https://example.com"
      },
      "faqPage": {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": []
      }
    }
  ],
  "x-specs": [
    {
      "id": "APP-PAGES-STRUCTUREDDATA-001",
      "given": "structured data with organization",
      "when": "organization property references organization.schema.json",
      "then": "it should include Organization structured data",
      "application": {
        "structuredData": {
          "organization": {
            "@context": "https://schema.org",
            "@type": "Organization",
            "name": "Tech Solutions Inc",
            "url": "https://techsolutions.example.com",
            "logo": "https://techsolutions.example.com/logo.png",
            "email": "info@techsolutions.example.com",
            "telephone": "+1-555-123-4567"
          }
        },
        "assertions": [
          "organization: References organization.schema.json",
          "Includes: name, url, logo, contact info",
          "Displayed in Google Knowledge Panel"
        ]
      }
    },
    {
      "id": "APP-PAGES-STRUCTUREDDATA-002",
      "given": "structured data with person",
      "when": "person property references person.schema.json",
      "then": "it should include Person structured data",
      "application": {
        "structuredData": {
          "person": {
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "Sarah Johnson",
            "jobTitle": "Chief Technology Officer",
            "url": "https://sarahjohnson.example.com",
            "image": "https://sarahjohnson.example.com/photo.jpg",
            "sameAs": [
              "https://twitter.com/sarahjohnson",
              "https://www.linkedin.com/in/sarahjohnson"
            ]
          }
        },
        "assertions": [
          "person: References person.schema.json",
          "Includes: name, jobTitle, url, social profiles",
          "Used for: Author attribution, team pages, expert bios"
        ]
      }
    },
    {
