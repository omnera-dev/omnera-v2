      "then": "it should include BreadcrumbList structured data",
      "application": {
        "structuredData": {
          "breadcrumb": {
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": [
              {
                "@type": "ListItem",
