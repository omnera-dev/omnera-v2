          "name": "Full-Stack Web Development Bootcamp",
          "description": "Comprehensive 16-week bootcamp covering frontend, backend, databases, and deployment.",
          "startDate": "2025-12-01T09:00:00-05:00",
          "endDate": "2026-03-20T17:00:00-04:00",
          "eventAttendanceMode": "https://schema.org/MixedEventAttendanceMode",
          "eventStatus": "https://schema.org/EventScheduled",
          "location": {
            "@type": "Place",
            "name": "Code Institute NYC",
            "address": {
              "@type": "PostalAddress",
              "streetAddress": "456 Tech Avenue",
              "addressLocality": "New York",
              "addressRegion": "NY",
              "postalCode": "10001",
              "addressCountry": "US"
            }
          },
          "organizer": {
            "@type": "Organization",
            "name": "Code Institute",
            "url": "https://codeinstitute.example.com"
          },
          "offers": {
            "@type": "Offer",
            "price": "12999",
            "priceCurrency": "USD",
            "availability": "https://schema.org/InStock",
            "url": "https://codeinstitute.example.com/bootcamp/register"
          },
          "maximumAttendeeCapacity": 30
        },
        "richResults": {
          "Google Search": "Event card with date, location, price, availability",
          "Google Maps": "Event pin on map for location-based discovery",
          "Event carousel": "Eligible for featured event listings"
        },
        "assertions": [
          "Complete EducationEvent: All recommended properties",
          "Maximizes rich result eligibility",
          "Best practice for educational events"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-014",
      "given": "EducationEvent for event discovery",
      "when": "EducationEvent structured data is included in page metadata",
      "then": "it should display event in Google Search, Maps, and event discovery features",
      "application": {
        "discoveryFeatures": {
          "Google Search": "Event cards in search results (with dates, location, pricing)",
          "Google Maps": "Events appear on Maps for location-based searches",
          "Event Finder": "Inclusion in Google's event discovery tools",
          "Knowledge Panel": "Events may appear in related knowledge panels"
        },
        "benefits": {
          "Visibility": "Higher visibility for educational events",
          "CTR": "Rich results improve click-through rates",
          "Conversions": "Direct registration links increase conversions"
        },
        "assertions": [
          "Displays in multiple Google surfaces",
          "Improves event discoverability",
          "Critical for educational institutions, bootcamps, workshops"
        ]
      }
    },
    {
      "id": "APP-PAGES-META-STRUCTURED-DATA-EDUCATION-EVENT-REGRESSION-001",
      "given": "complete application configuration with all features",
      "when": "user completes full workflow",
      "then": "user can complete full Education Event workflow"
    }
  ]
}
