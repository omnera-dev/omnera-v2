{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "education-event.schema.json",
  "title": "Education Event Schema",
  "description": "Schema.org EducationEvent structured data",
  "type": "object",
  "properties": {
    "@type": {
      "type": "string",
      "const": "EducationEvent",
      "description": "Schema.org type"
    },
    "name": {
      "type": "string",
      "description": "Event name"
    },
    "description": {
      "type": "string",
      "description": "Event description"
    },
    "startDate": {
      "type": "string",
      "format": "date-time",
      "description": "Event start date/time (ISO 8601)"
    },
    "endDate": {
      "type": "string",
      "format": "date-time",
      "description": "Event end date/time (ISO 8601)"
    },
    "eventAttendanceMode": {
      "type": "string",
      "enum": [
        "https://schema.org/OfflineEventAttendanceMode",
        "https://schema.org/OnlineEventAttendanceMode",
        "https://schema.org/MixedEventAttendanceMode"
      ],
      "description": "Attendance mode"
    },
    "eventStatus": {
      "type": "string",
      "enum": [
        "https://schema.org/EventScheduled",
        "https://schema.org/EventCancelled",
        "https://schema.org/EventPostponed",
        "https://schema.org/EventRescheduled"
      ],
      "description": "Event status"
    },
    "location": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Place"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "./postal-address.schema.json"
        }
      }
    },
    "organizer": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": ["Organization", "Person"]
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "offers": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Offer"
        },
        "price": {
          "type": ["string", "number"]
        },
        "priceCurrency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "availability": {
          "type": "string",
          "enum": [
            "https://schema.org/InStock",
            "https://schema.org/OutOfStock",
            "https://schema.org/PreOrder",
            "https://schema.org/SoldOut"
          ]
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "maximumAttendeeCapacity": {
      "type": "integer",
      "minimum": 1
    },
    "minimumAttendeeCapacity": {
      "type": "integer",
      "minimum": 1
    }
  },
  "required": ["@type", "name", "startDate"],
  "additionalProperties": false,
  "x-specs": [
    {
      "id": "APP-PAGES-EDUCATIONEVENT-001",
      "given": "EducationEvent with required properties",
      "when": "@type is 'EducationEvent', name and startDate are provided",
      "then": "it should validate minimal EducationEvent structured data",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "Introduction to Python Programming",
          "startDate": "2025-02-15T10:00:00Z"
        },
        "assertions": [
          "@type: 'EducationEvent' (required)",
          "name: Event title (required)",
          "startDate: ISO 8601 date-time (required)",
          "Minimal valid EducationEvent"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-002",
      "given": "EducationEvent with name and description",
      "when": "name and description describe the educational event",
      "then": "it should provide event identity",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "Web Development Bootcamp",
          "description": "Intensive 12-week bootcamp covering HTML, CSS, JavaScript, React, and Node.js with hands-on projects.",
          "startDate": "2025-03-01T09:00:00Z"
        },
        "assertions": [
          "name: Event title (concise)",
          "description: Detailed event summary (recommended)",
          "Helps users understand event content"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-003",
      "given": "EducationEvent with startDate",
      "when": "startDate is ISO 8601 date-time",
      "then": "it should specify when event begins",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "Machine Learning Workshop",
          "startDate": "2025-04-10T14:00:00-05:00"
        },
        "note": "Timezone-aware (uses -05:00 for CDT)",
        "assertions": [
          "startDate: ISO 8601 with timezone (required)",
          "Format: YYYY-MM-DDTHH:MM:SSÂ±HH:MM",
          "Displayed in Google Events rich results"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-004",
      "given": "EducationEvent with endDate",
      "when": "endDate is ISO 8601 date-time",
      "then": "it should specify when event ends",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "Data Science Conference",
          "startDate": "2025-05-20T09:00:00Z",
          "endDate": "2025-05-22T17:00:00Z"
        },
        "duration": "3-day event (May 20-22, 2025)",
        "assertions": [
          "endDate: ISO 8601 (optional)",
          "Specifies event duration",
          "Multi-day events: Different dates"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-005",
      "given": "EducationEvent with eventAttendanceMode",
      "when": "eventAttendanceMode is OfflineEventAttendanceMode, OnlineEventAttendanceMode, or MixedEventAttendanceMode",
      "then": "it should specify whether event is in-person, online, or hybrid",
      "application": {
        "modes": {
          "OfflineEventAttendanceMode": "In-person only (physical venue)",
          "OnlineEventAttendanceMode": "Virtual only (Zoom, Teams, etc.)",
          "MixedEventAttendanceMode": "Hybrid (both in-person and virtual)"
        },
        "example": {
          "@type": "EducationEvent",
          "name": "AI Ethics Seminar",
          "startDate": "2025-06-15T14:00:00Z",
          "eventAttendanceMode": "https://schema.org/OnlineEventAttendanceMode"
        },
        "assertions": [
          "eventAttendanceMode: Enum (Offline, Online, Mixed)",
          "Schema.org URLs (full URLs required)",
          "Critical for event discovery post-COVID"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-006",
      "given": "EducationEvent with eventStatus",
      "when": "eventStatus is EventScheduled, EventCancelled, EventPostponed, or EventRescheduled",
      "then": "it should communicate event status",
      "application": {
        "statuses": {
          "EventScheduled": "Event confirmed (default)",
          "EventCancelled": "Event cancelled",
          "EventPostponed": "Event postponed (new date TBD)",
          "EventRescheduled": "Event moved to new date"
        },
        "example": {
          "@type": "EducationEvent",
          "name": "Cancelled Workshop",
          "startDate": "2025-07-10T10:00:00Z",
          "eventStatus": "https://schema.org/EventCancelled"
        },
        "assertions": [
          "eventStatus: Enum (Scheduled, Cancelled, Postponed, Rescheduled)",
          "Schema.org URLs required",
          "Prevents user confusion"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-007",
      "given": "EducationEvent with location",
      "when": "location is object with @type 'Place', name, and address",
      "then": "it should provide event venue information",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "Frontend Development Workshop",
          "startDate": "2025-08-01T09:00:00Z",
          "location": {
            "@type": "Place",
            "name": "Tech Hub Conference Center",
            "address": {
              "@type": "PostalAddress",
              "streetAddress": "123 Innovation Drive",
              "addressLocality": "San Francisco",
              "addressRegion": "CA",
              "postalCode": "94105",
              "addressCountry": "US"
            }
          }
        },
        "assertions": [
          "location: Place object with name + address",
          "address: PostalAddress (schema reference)",
          "Required for OfflineEventAttendanceMode"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-008",
      "given": "EducationEvent with organizer",
      "when": "organizer is object with @type 'Organization' or 'Person', name, and url",
      "then": "it should identify event organizer",
      "application": {
        "organization": {
          "@type": "EducationEvent",
          "name": "Python Bootcamp",
          "startDate": "2025-09-01T09:00:00Z",
          "organizer": {
            "@type": "Organization",
            "name": "Code Academy",
            "url": "https://codeacademy.example.com"
          }
        },
        "person": {
          "@type": "EducationEvent",
          "name": "JavaScript Masterclass",
          "startDate": "2025-09-15T14:00:00Z",
          "organizer": {
            "@type": "Person",
            "name": "Jane Developer",
            "url": "https://janedeveloper.example.com"
          }
        },
        "assertions": [
          "organizer: Organization or Person",
          "name + url (optional but recommended)",
          "Shows who's hosting the event"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-009",
      "given": "EducationEvent with offers",
      "when": "offers has @type 'Offer', price, priceCurrency, availability, url",
      "then": "it should provide ticket pricing and availability",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "UX Design Workshop",
          "startDate": "2025-10-01T10:00:00Z",
          "offers": {
            "@type": "Offer",
            "price": "149.00",
            "priceCurrency": "USD",
            "availability": "https://schema.org/InStock",
            "url": "https://events.example.com/ux-workshop/register"
          }
        },
        "assertions": [
          "offers: Offer object (ticket/registration)",
          "price + priceCurrency: Pricing info",
          "availability: InStock, SoldOut, etc.",
          "url: Registration/purchase link"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-010",
      "given": "EducationEvent with price and priceCurrency",
      "when": "price is '0' or '29.99' and priceCurrency is 'EUR' (ISO 4217)",
      "then": "it should specify event ticket price",
      "application": {
        "free": {
          "price": "0",
          "priceCurrency": "USD",
          "note": "Free event"
        },
        "paid": {
          "price": "79.99",
          "priceCurrency": "EUR",
          "note": "Paid event (79.99 EUR)"
        },
        "assertions": [
          "price: String or number ('0' for free)",
          "priceCurrency: ISO 4217 code (USD, EUR, GBP, etc.)",
          "Displayed in Google Events rich results"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-011",
      "given": "EducationEvent with availability enum",
      "when": "availability is InStock, OutOfStock, PreOrder, or SoldOut",
      "then": "it should indicate ticket availability status",
      "application": {
        "statuses": {
          "InStock": "Tickets available",
          "SoldOut": "Tickets sold out",
          "PreOrder": "Early bird registration open",
          "OutOfStock": "Currently unavailable"
        },
        "example": {
          "offers": {
            "@type": "Offer",
            "price": "99",
            "priceCurrency": "USD",
            "availability": "https://schema.org/SoldOut"
          }
        },
        "assertions": [
          "availability: Enum (InStock, SoldOut, PreOrder, OutOfStock)",
          "Schema.org URLs required",
          "Shows real-time ticket status"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-012",
      "given": "EducationEvent with capacity",
      "when": "maximumAttendeeCapacity and minimumAttendeeCapacity are integers",
      "then": "it should specify event capacity limits",
      "application": {
        "event": {
          "@type": "EducationEvent",
          "name": "Small Group Coding Workshop",
          "startDate": "2025-11-01T10:00:00Z",
          "minimumAttendeeCapacity": 5,
          "maximumAttendeeCapacity": 20
        },
        "note": "Event requires 5-20 attendees",
        "assertions": [
          "maximumAttendeeCapacity: Max attendees (optional)",
          "minimumAttendeeCapacity: Min required (optional)",
          "Helps with event planning and registration limits"
        ]
      }
    },
    {
      "id": "APP-PAGES-EDUCATIONEVENT-013",
      "given": "EducationEvent for rich results",
      "when": "complete event data with dates, location, and offers is provided",
      "then": "it should enable Google Events rich results",
      "application": {
