{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "open-graph.schema.json",
  "title": "Open Graph Metadata",
  "description": "Open Graph protocol metadata for rich social media sharing",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 90,
      "description": "Open Graph title (may differ from page title)"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Open Graph description"
    },
    "type": {
      "type": "string",
      "enum": ["website", "article", "book", "profile", "video", "music"],
      "default": "website",
      "description": "Open Graph object type"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL for this page"
    },
    "image": {
      "type": "string",
      "format": "uri",
      "description": "Image URL for social sharing (recommended: 1200x630px)"
    },
    "imageAlt": {
      "type": "string",
      "description": "Alternative text for the Open Graph image"
    },
    "siteName": {
      "type": "string",
      "description": "Name of the overall website"
    },
    "locale": {
      "type": "string",
      "pattern": "^[a-z]{2}_[A-Z]{2}$",
      "default": "en_US",
      "description": "Locale in format language_TERRITORY",
      "examples": ["en_US", "fr_FR", "es_ES"]
    },
    "determiner": {
      "type": "string",
      "enum": ["a", "an", "the", "auto", ""],
      "description": "Word that appears before the title"
    },
    "video": {
      "type": "string",
      "format": "uri",
      "description": "Video URL if sharing video content"
    },
    "audio": {
      "type": "string",
      "format": "uri",
      "description": "Audio URL if sharing audio content"
    }
  },
  "required": ["title", "description", "type", "url"],
  "additionalProperties": false,
  "examples": [
    {
      "title": "Atelier de Consentement à Prix Libre à Strasbourg",
      "description": "Atelier de 3h pour apprendre à dire non et poser ses limites",
      "type": "website",
      "url": "https://example.com",
      "image": "https://example.com/social.png",
      "siteName": "Mon Site",
      "locale": "fr_FR"
    }
  ],
  "specs": [
    {
      "id": "APP-PAGES-OG-001",
      "given": "Open Graph with required properties",
      "when": "title, description, type, and url are provided",
      "then": "it should validate minimal Open Graph metadata",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Amazing Product Launch",
            "description": "Revolutionary new product changing the industry",
            "type": "website",
            "url": "https://example.com/product"
          }
        },
        "assertions": [
          "Required: title, description, type, url",
          "Minimal valid Open Graph",
          "Facebook/LinkedIn will generate preview",
          "Without OG tags: generic unfurl (no image, title from <title>)"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Amazing Product Launch",
          "description": "Revolutionary new product changing the industry",
          "type": "website",
          "url": "https://example.com/product"
        },
        "expectedDOM": "<meta property=\"og:title\" content=\"Amazing Product Launch\" /><meta property=\"og:description\" content=\"Revolutionary new product changing the industry\" /><meta property=\"og:type\" content=\"website\" /><meta property=\"og:url\" content=\"https://example.com/product\" />",
        "facebookPreview": {
          "title": "Amazing Product Launch",
          "description": "Revolutionary new product changing the industry",
          "url": "example.com/product",
          "image": null
        },
        "assertions": [
          "Facebook shows: title + description + URL",
          "No image (uses placeholder if none provided)",
          "Better than no OG tags (generic unfurl)",
          "Minimal but functional social preview"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-002",
      "given": "Open Graph title with maxLength",
      "when": "title has 90 characters max",
      "then": "it should enforce title length for social display",
      "x-validation": {
        "setup": {
          "valid": {
            "title": "Transform Your Business with AI-Powered Analytics - Start Free Trial Today"
          },
          "invalid": {
            "title": "This is an extremely long Open Graph title that significantly exceeds the recommended ninety character limit for optimal display on Facebook and LinkedIn social cards, resulting in truncation"
          }
        },
        "assertions": [
          "maxLength: 90 characters",
          "Valid: 80 characters (fits in preview)",
          "Invalid: 177 characters (truncated with '...')",
          "Optimal for Facebook/LinkedIn"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Transform Your Business with AI-Powered Analytics - Start Free Trial Today"
        },
        "facebookPreview": {
          "displayed": "Transform Your Business with AI-Powered Analytics - Start Free Trial Today",
          "truncated": false
        },
        "assertions": [
          "Title length: 80 characters (within 90 limit)",
          "Facebook displays full title (no truncation)",
          "Optimal social card readability",
          "Best practice: 60-90 characters"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-003",
      "given": "Open Graph description with maxLength",
      "when": "description has 200 characters max",
      "then": "it should enforce description length for social cards",
      "x-validation": {
        "setup": {
          "valid": {
            "description": "Discover how our AI-powered platform helps businesses make data-driven decisions. Get real-time insights, automated reporting, and predictive analytics. Start your free 14-day trial today."
          },
          "invalid": {
            "description": "This is an overly verbose Open Graph description that significantly exceeds the recommended two hundred character limit, resulting in truncation in social media previews on platforms like Facebook and LinkedIn, which reduces the effectiveness of the social sharing card and may confuse potential visitors about the actual content of the page they would be clicking through to visit."
          }
        },
        "assertions": [
          "maxLength: 200 characters",
          "Valid: 178 characters (fits in preview)",
          "Invalid: 333 characters (truncated)",
          "Optimal for social cards"
        ]
      },
      "x-application": {
        "openGraph": {
          "description": "Discover how our AI-powered platform helps businesses make data-driven decisions. Get real-time insights, automated reporting, and predictive analytics. Start your free 14-day trial today."
        },
        "facebookPreview": {
          "displayed": "Discover how our AI-powered platform helps businesses make data-driven decisions. Get real-time insights, automated reporting, and predictive analytics. Start your free 14-day trial today.",
          "truncated": false
        },
        "assertions": [
          "Description: 178 characters (within 200 limit)",
          "Facebook displays full description",
          "Clear value proposition visible",
          "Best practice: 150-200 characters"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-004",
      "given": "Open Graph type enum",
      "when": "type is one of: website, article, book, profile, video, music",
      "then": "it should categorize content type for social platforms",
      "x-validation": {
        "setup": {
          "types": [
            {
              "type": "website",
              "use": "General websites, landing pages"
            },
            {
              "type": "article",
              "use": "Blog posts, news articles"
            },
            {
              "type": "book",
              "use": "Book pages, publications"
            },
            {
              "type": "profile",
              "use": "Personal/company profiles"
            },
            {
              "type": "video",
              "use": "Video content pages"
            },
            {
              "type": "music",
              "use": "Music content, albums"
            }
          ]
        },
        "assertions": [
          "6 content types supported",
          "website: most common (default)",
          "article: blog posts (adds publish date, author)",
          "video/music: media-specific features",
          "Type determines additional metadata fields"
        ]
      },
      "x-application": {
        "examples": {
          "website": {
            "type": "website",
            "title": "Acme Inc - Business Software"
          },
          "article": {
            "type": "article",
            "title": "10 Ways to Boost Productivity",
            "additionalMeta": {
              "article:published_time": "2025-01-15T10:00:00Z",
              "article:author": "Jane Doe"
            }
          },
          "video": {
            "type": "video",
            "title": "Product Demo Video",
            "video": "https://example.com/demo.mp4"
          }
        },
        "assertions": [
          "website: generic content (most pages)",
          "article: enables article:published_time, article:author",
          "video: enables video embeds in social feed",
          "Type affects how platforms display content"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-005",
      "given": "Open Graph image URL",
      "when": "image is URL with recommended 1200x630px dimensions",
      "then": "it should provide social sharing image",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Product Launch",
            "description": "Revolutionary product",
            "type": "website",
            "url": "https://example.com",
            "image": "https://example.com/og-image-1200x630.jpg"
          },
          "imageSpecs": {
            "recommended": "1200x630px (1.91:1 aspect ratio)",
            "minSize": "600x315px",
            "maxSize": "8MB",
            "format": "JPG, PNG, WebP"
          }
        },
        "assertions": [
          "image: absolute URL to image",
          "Recommended: 1200x630px (1.91:1)",
          "Minimum: 600x315px",
          "Max file size: 8MB",
          "Formats: JPG, PNG, WebP"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Product Launch",
          "description": "Revolutionary product",
          "type": "website",
          "url": "https://example.com",
          "image": "https://example.com/og-image-1200x630.jpg"
        },
        "expectedDOM": "<meta property=\"og:image\" content=\"https://example.com/og-image-1200x630.jpg\" /><meta property=\"og:image:width\" content=\"1200\" /><meta property=\"og:image:height\" content=\"630\" />",
        "facebookPreview": {
          "title": "Product Launch",
          "description": "Revolutionary product",
          "image": "https://example.com/og-image-1200x630.jpg",
          "imageSize": "1200x630px (large preview card)"
        },
        "assertions": [
          "Image displayed prominently in social card",
          "1200x630px: large, high-quality preview",
          "Image appears above title/description",
          "Dramatically increases click-through rate",
          "Without image: much lower engagement"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-006",
      "given": "Open Graph imageAlt",
      "when": "imageAlt describes image for accessibility",
      "then": "it should provide alternative text for social image",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Product Launch",
            "description": "Revolutionary product",
            "type": "website",
            "url": "https://example.com",
            "image": "https://example.com/og-image.jpg",
            "imageAlt": "Product screenshot showing dashboard with analytics graphs and metrics"
          }
        },
        "assertions": [
          "imageAlt: describes OG image",
          "Important for accessibility",
          "Screen readers announce this text",
          "Better than no alt text"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Product Launch",
          "description": "Revolutionary product",
          "type": "website",
          "url": "https://example.com",
          "image": "https://example.com/og-image.jpg",
          "imageAlt": "Product screenshot showing dashboard with analytics graphs and metrics"
        },
        "expectedDOM": "<meta property=\"og:image\" content=\"https://example.com/og-image.jpg\" /><meta property=\"og:image:alt\" content=\"Product screenshot showing dashboard with analytics graphs and metrics\" />",
        "accessibility": {
          "screenReader": "Announces image alt text when focused",
          "withoutAlt": "Announces 'image' (not helpful)"
        },
        "assertions": [
          "og:image:alt provides accessible description",
          "Screen readers announce: 'Product screenshot showing...'",
          "WCAG compliance for social media",
          "Important for visually impaired users"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-007",
      "given": "Open Graph siteName",
      "when": "siteName identifies the overall website brand",
      "then": "it should distinguish site from page title",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "10 Ways to Boost Productivity",
            "description": "Proven strategies for better productivity",
            "type": "article",
            "url": "https://example.com/blog/productivity",
            "siteName": "Acme Blog"
          }
        },
        "assertions": [
          "siteName: overall website/brand name",
          "Different from og:title (page-specific)",
          "Shown below title in social card",
          "Helps users recognize source"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "10 Ways to Boost Productivity",
          "description": "Proven strategies for better productivity",
          "type": "article",
          "url": "https://example.com/blog/productivity",
          "siteName": "Acme Blog"
        },
        "expectedDOM": "<meta property=\"og:title\" content=\"10 Ways to Boost Productivity\" /><meta property=\"og:site_name\" content=\"Acme Blog\" />",
        "facebookPreview": {
          "title": "10 Ways to Boost Productivity",
          "siteName": "Acme Blog",
          "url": "example.com",
          "layout": "[title] by [siteName] • [url]"
        },
        "assertions": [
          "Title: '10 Ways to Boost Productivity' (article)",
          "Site name: 'Acme Blog' (brand)",
          "Displayed: '[title] by [siteName]'",
          "Helps users identify content source",
          "Builds brand recognition"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-008",
      "given": "Open Graph locale",
      "when": "locale is format 'en_US', 'fr_FR' (language_TERRITORY)",
      "then": "it should specify content language for social platforms",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Atelier de Consentement",
            "description": "Atelier pour apprendre à poser ses limites",
            "type": "website",
            "url": "https://example.fr",
            "locale": "fr_FR"
          },
          "localeFormat": {
            "pattern": "^[a-z]{2}_[A-Z]{2}$",
            "examples": ["en_US", "fr_FR", "es_ES", "de_DE", "ja_JP"]
          }
        },
        "assertions": [
          "locale: language_TERRITORY format",
          "Pattern: [a-z]{2}_[A-Z]{2}",
          "Examples: en_US, fr_FR, es_ES",
          "Helps platforms show content to right audience"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Atelier de Consentement",
          "description": "Atelier pour apprendre à poser ses limites",
          "type": "website",
          "url": "https://example.fr",
          "locale": "fr_FR"
        },
        "expectedDOM": "<meta property=\"og:locale\" content=\"fr_FR\" />",
        "assertions": [
          "Locale: fr_FR (French content, France)",
          "Facebook prioritizes to French-speaking users",
          "Helps with content discovery",
          "Improves relevance in news feed"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-009",
      "given": "Open Graph determiner",
      "when": "determiner is 'a', 'an', 'the', 'auto', or empty",
      "then": "it should provide grammatical article before title",
      "x-validation": {
        "setup": {
          "examples": [
            {
              "title": "Ultimate Guide to SEO",
              "determiner": "the",
              "sentence": "Share the Ultimate Guide to SEO"
            },
            {
              "title": "Amazing Product",
              "determiner": "an",
              "sentence": "Share an Amazing Product"
            },
            {
              "title": "Website Builder",
              "determiner": "a",
              "sentence": "Share a Website Builder"
            },
            {
              "title": "LinkedIn Profile Tips",
              "determiner": "auto",
              "sentence": "Share LinkedIn Profile Tips (no article)"
            }
          ]
        },
        "assertions": [
          "determiner: grammatical article",
          "Values: 'a', 'an', 'the', 'auto', '' (empty)",
          "Used in: 'John shared [determiner] [title]'",
          "auto: platform decides based on title",
          "Improves grammar in share messages"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Ultimate Guide to SEO",
          "determiner": "the",
          "description": "Comprehensive SEO guide",
          "type": "article",
          "url": "https://example.com/guide"
        },
        "expectedDOM": "<meta property=\"og:determiner\" content=\"the\" />",
        "facebookPost": {
          "text": "John Smith shared the Ultimate Guide to SEO",
          "withoutDeterminer": "John Smith shared Ultimate Guide to SEO (awkward)"
        },
        "assertions": [
          "Determiner 'the' added before title",
          "Share text: 'John shared the Ultimate Guide to SEO'",
          "Better grammar than no article",
          "Small detail, better UX"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-010",
      "given": "Open Graph video URL",
      "when": "video property contains media URL",
      "then": "it should enable video content sharing",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Product Demo Video",
            "description": "See our product in action",
            "type": "video",
            "url": "https://example.com/demo",
            "image": "https://example.com/video-thumbnail.jpg",
            "video": "https://example.com/demo.mp4"
          },
          "videoSpecs": {
            "formats": "MP4, WebM",
            "maxSize": "50MB",
            "aspectRatio": "16:9"
          }
        },
        "assertions": [
          "video: URL to video file",
          "type: 'video' (enables video features)",
          "image: video thumbnail/poster",
          "Facebook may embed video in feed"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Product Demo Video",
          "description": "See our product in action",
          "type": "video",
          "url": "https://example.com/demo",
          "image": "https://example.com/video-thumbnail.jpg",
          "video": "https://example.com/demo.mp4"
        },
        "expectedDOM": "<meta property=\"og:type\" content=\"video\" /><meta property=\"og:video\" content=\"https://example.com/demo.mp4\" /><meta property=\"og:video:type\" content=\"video/mp4\" />",
        "facebookPreview": {
          "title": "Product Demo Video",
          "description": "See our product in action",
          "thumbnail": "https://example.com/video-thumbnail.jpg",
          "playButton": "▶ Play video",
          "behavior": "Video plays inline in Facebook feed"
        },
        "assertions": [
          "Video thumbnail displayed with play button",
          "Click: video plays inline in Facebook",
          "No redirect to external site",
          "Higher engagement than link-only posts"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-011",
      "given": "Open Graph audio URL",
      "when": "audio property contains media URL",
      "then": "it should enable audio content sharing",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Podcast Episode #42: Marketing Strategies",
            "description": "Learn advanced marketing from industry experts",
            "type": "music",
            "url": "https://example.com/podcast/42",
            "image": "https://example.com/podcast-cover.jpg",
            "audio": "https://example.com/podcast-42.mp3"
          },
          "audioSpecs": {
            "formats": "MP3, OGG, M4A",
            "maxSize": "100MB"
          }
        },
        "assertions": [
          "audio: URL to audio file",
          "type: 'music' (enables audio features)",
          "image: podcast/album cover art",
          "Facebook may embed audio player"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Podcast Episode #42: Marketing Strategies",
          "description": "Learn advanced marketing from industry experts",
          "type": "music",
          "url": "https://example.com/podcast/42",
          "image": "https://example.com/podcast-cover.jpg",
          "audio": "https://example.com/podcast-42.mp3"
        },
        "expectedDOM": "<meta property=\"og:type\" content=\"music\" /><meta property=\"og:audio\" content=\"https://example.com/podcast-42.mp3\" /><meta property=\"og:audio:type\" content=\"audio/mpeg\" />",
        "facebookPreview": {
          "title": "Podcast Episode #42: Marketing Strategies",
          "description": "Learn advanced marketing from industry experts",
          "coverArt": "https://example.com/podcast-cover.jpg",
          "playButton": "▶ Play audio",
          "behavior": "Audio plays in Facebook feed"
        },
        "assertions": [
          "Podcast cover art displayed with play button",
          "Click: audio plays inline in Facebook",
          "No redirect to external site",
          "Perfect for podcasts, music, audio content"
        ]
      }
    },
    {
      "id": "APP-PAGES-OG-012",
      "given": "Open Graph rich social preview",
      "when": "all properties create rich card on Facebook/LinkedIn",
      "then": "it should display enhanced social sharing card",
      "x-validation": {
        "setup": {
          "openGraph": {
            "title": "Transform Your Business with AI-Powered Analytics",
            "description": "Get real-time insights, automated reporting, and predictive analytics. Start your free 14-day trial today with no credit card required.",
            "type": "website",
            "url": "https://example.com/product",
            "image": "https://example.com/og-image-1200x630.jpg",
            "imageAlt": "Dashboard screenshot showing analytics graphs",
            "siteName": "Acme Analytics",
            "locale": "en_US"
          }
        },
        "assertions": [
          "Complete Open Graph metadata",
          "All optional fields provided",
          "Optimal for high engagement",
          "Professional social presence"
        ]
      },
      "x-application": {
        "openGraph": {
          "title": "Transform Your Business with AI-Powered Analytics",
          "description": "Get real-time insights, automated reporting, and predictive analytics. Start your free 14-day trial today with no credit card required.",
          "type": "website",
          "url": "https://example.com/product",
          "image": "https://example.com/og-image-1200x630.jpg",
          "imageAlt": "Dashboard screenshot showing analytics graphs",
          "siteName": "Acme Analytics",
          "locale": "en_US"
        },
        "facebookPreview": {
          "image": "https://example.com/og-image-1200x630.jpg (large, 1200x630px)",
          "title": "Transform Your Business with AI-Powered Analytics",
          "description": "Get real-time insights, automated reporting, and predictive analytics. Start your free 14-day trial today...",
          "siteName": "Acme Analytics",
          "url": "example.com/product",
          "layout": "Large image card with title, description, site name"
        },
        "linkedInPreview": {
          "image": "https://example.com/og-image-1200x630.jpg (large preview)",
          "title": "Transform Your Business with AI-Powered Analytics",
          "description": "Get real-time insights, automated reporting, and predictive analytics...",
          "siteName": "Acme Analytics"
        },
        "impact": {
          "withOG": "Large image + title + description = high CTR",
          "withoutOG": "Plain link = low CTR",
          "engagement": "Rich cards get 2-3x more clicks"
        },
        "assertions": [
          "Rich card: large image + title + description",
          "Facebook: optimal display on desktop and mobile",
          "LinkedIn: professional preview card",
          "Image grabs attention (most important element)",
          "Title + description explain value proposition",
          "Complete OG tags = 2-3x higher click-through rate"
        ]
      }
    }
  ]
}
