{
  "summary": "Health check endpoint",
  "description": "Returns server health status. Used by monitoring tools and E2E tests to verify server is running.\n\n**Response includes**:\n- `status`: Current server status (always \"ok\" when responding)\n- `timestamp`: ISO 8601 timestamp of the health check (for freshness validation)\n- `app`: Application metadata (name, version)",
  "operationId": "healthCheck",
  "tags": ["infrastructure"],
  "responses": {
    "200": {
      "description": "Server is healthy",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["status", "timestamp", "app"],
            "properties": {
              "status": {
                "type": "string",
                "enum": ["ok"],
                "description": "Server health status indicator",
                "example": "ok"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "ISO 8601 timestamp of the health check",
                "example": "2025-01-15T10:30:00.123Z"
              },
              "app": {
                "type": "object",
                "required": ["name"],
                "description": "Application metadata",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Application name from configuration",
                    "example": "my-app"
                  }
                }
              }
            }
          },
          "examples": {
            "healthy": {
              "summary": "Healthy server response",
              "value": {
                "status": "ok",
                "timestamp": "2025-01-15T10:30:00.123Z",
                "app": {
                  "name": "my-app"
                }
              }
            },
            "scopedPackage": {
              "summary": "Scoped package name",
              "value": {
                "status": "ok",
                "timestamp": "2025-01-15T10:30:00.123Z",
                "app": {
                  "name": "@myorg/dashboard"
                }
              }
            }
          }
        }
      }
    }
  },
  "specs": [
    {
      "id": "API-HEALTH-001",
      "given": "A running server",
      "when": "User requests health endpoint",
      "then": "Response should be 200 OK"
    },
    {
      "id": "API-HEALTH-002",
      "given": "A server with specific app name",
      "when": "User requests health endpoint",
      "then": "JSON should have status field"
    },
    {
      "id": "API-HEALTH-003",
      "given": "A running server",
      "when": "User requests health endpoint",
      "then": "Timestamp should be between request start and end"
    },
    {
      "id": "API-HEALTH-004",
      "given": "A server with scoped package name",
      "when": "User requests health endpoint",
      "then": "App name should preserve special characters"
    }
  ]
}
