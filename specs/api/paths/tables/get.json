{
  "summary": "List all tables",
  "description": "Returns array of all configured tables from the application schema. Tables define the data structure and fields for storing records.",
  "operationId": "listTables",
  "tags": ["tables"],
  "responses": {
    "200": {
      "description": "List of tables",
      "content": {
        "application/json": {
          "schema": {
            "type": "array",
            "items": {
              "$ref": "../../components/schemas/Table.json"
            }
          },
          "examples": {
            "multipleTables": {
              "value": [
                {
                  "id": 1,
                  "name": "users",
                  "fields": [
                    {
                      "id": 1,
                      "name": "email",
                      "type": "email",
                      "required": true
                    }
                  ]
                },
                {
                  "id": 2,
                  "name": "products",
                  "fields": [
                    {
                      "id": 1,
                      "name": "title",
                      "type": "single-line-text"
                    }
                  ]
                }
              ]
            },
            "empty": {
              "value": []
            }
          }
        }
      }
    }
  },
  "x-specs": [
    {
      "id": "API-TABLES-LIST-001",
      "given": "A running server with tables configured",
      "when": "User requests list of all tables",
      "then": "Response should be 200 OK with array of tables"
    },
    {
      "id": "API-TABLES-LIST-002",
      "given": "A running server with no tables",
      "when": "User requests list of all tables",
      "then": "Response should be 200 OK with empty array"
    }
  ]
}
