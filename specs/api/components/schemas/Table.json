{
  "type": "object",
  "description": "Table configuration with fields, constraints, and indexes",
  "required": ["id", "name", "fields"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique table identifier",
      "minimum": 1,
      "example": 1
    },
    "name": {
      "type": "string",
      "description": "Table name following database naming conventions",
      "pattern": "^[a-z][a-z0-9_]*$",
      "example": "users"
    },
    "fields": {
      "type": "array",
      "description": "Array of field definitions",
      "minItems": 1,
      "items": {
        "$ref": "./Field.json"
      }
    },
    "primaryKey": {
      "$ref": "./PrimaryKey.json"
    },
    "uniqueConstraints": {
      "type": "array",
      "items": {
        "$ref": "./UniqueConstraint.json"
      }
    },
    "indexes": {
      "type": "array",
      "items": {
        "$ref": "./Index.json"
      }
    }
  }
}
