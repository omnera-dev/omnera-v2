{
  "type": "object",
  "required": ["name", "fields"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "fields": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "unique": {
      "type": "boolean",
      "default": false
    }
  }
}
