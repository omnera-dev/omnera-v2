{
  "type": "object",
  "description": "Field definition with type and validation rules",
  "required": ["id", "name", "type"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "type": {
      "type": "string",
      "enum": [
        "single-line-text",
        "long-text",
        "email",
        "url",
        "phone-number",
        "integer",
        "decimal",
        "currency",
        "percentage"
      ]
    },
    "required": {
      "type": "boolean",
      "default": false
    },
    "unique": {
      "type": "boolean",
      "default": false
    }
  }
}
